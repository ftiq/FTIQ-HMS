<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_hms_physician_form_inherit" model="ir.ui.view">
        <field name="name">hms.physician.form.inherit.website</field>
        <field name="model">hms.physician</field>
        <field name="inherit_id" ref="acs_hms_base.view_physician_form" />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <field name="is_published" widget="website_redirect_button"/>
            </div>
            <xpath expr="//page[@name='general_info']/group" position="after">
                <group string="Description">
                    <field name="acs_website_description" widget="html" invisible="1"/> 
                    <field name="acs_physician_experience"/>
                    <field name="acs_physician_availability"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
