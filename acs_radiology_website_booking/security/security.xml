<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="privilege_acs_radiology_website_booking" model="res.groups.privilege" >
        <field name="name">Radiology Appointment Manager</field>
        <field name="sequence">10</field>
        <field name="category_id" ref="acs_website_booking.website_booking_category"/>
    </record>
 
    <record id="group_radiology_appointment_manager" model="res.groups">
        <field name="name">Allow</field>
        <field name="privilege_id" ref="privilege_acs_radiology_website_booking"/>
        <field name="implied_ids" eval="[Command.link(ref('acs_laboratory.group_hms_lab_user')),Command.link(ref('acs_website_booking.group_booking_user'))]"/>
    </record>

    <data noupdate="0">

        <!-- For Manager -->        
        <record id="acs_manager_radiology_schedule_manager_rule" model="ir.rule">
            <field name="name">Manager Radiology Schedule</field>
            <field name="model_id" ref="acs_website_booking.model_acs_schedule"/>
            <field name="domain_force">[('schedule_type','=','radiology')]</field>
            <field name="groups" eval="[Command.link(ref('acs_radiology_website_booking.group_radiology_appointment_manager'))]"/>
        </record>

        <record id="acs_manager_radiology_schedule_slot_manager_rule" model="ir.rule">
            <field name="name">Manager Radiology Schedule Slot</field>
            <field name="model_id" ref="acs_website_booking.model_acs_schedule_slot"/>
            <field name="domain_force">[('acs_schedule_id.schedule_type','=','radiology')]</field>
            <field name="groups" eval="[Command.link(ref('acs_radiology_website_booking.group_radiology_appointment_manager'))]"/>
        </record>

        <record id="acs_radiology.hms_radiology_request_portal_rule_1" model="ir.rule">
            <field name="name">Portal Patient's Own and Family Radiology Request</field>
            <field name="domain_force">['|',
                ('patient_id.acs_family_partner_ids','in',[user.commercial_partner_id.id]),
                ('patient_id.partner_id','=',user.commercial_partner_id.id)]</field>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
        </record>

        <record id="acs_radiology.hms_radiology_test_portal_rule_1" model="ir.rule">
            <field name="name">Portal Patient's Own and Family Radiology results</field>
            <field name="domain_force">['|',
                ('patient_id.acs_family_partner_ids','in',[user.commercial_partner_id.id]),
                ('patient_id.partner_id','=',user.commercial_partner_id.id)]</field>
        </record>

    </data>
</odoo>
