                            <!-- SpO2 Chart -->
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="hms-graph-card">
                                    <div class="hms-graph-chart-header" t-att-style="'background-color: ' + state.evaluationChartColor + '; opacity: 0.9;'">
                                        <img t-att-src="'/acs_hms/static/src/img/evaluation_graph.gif'" class="hms-graph-widget"/>
