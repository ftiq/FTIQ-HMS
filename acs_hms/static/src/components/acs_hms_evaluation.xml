<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="acs_hms.AcsHmsEvaluationChart">
        <div class="acs_hms_graph_control">
            <div class="hms-graph-header ">
                <div class="row">
                    <div class="ms-2 btn-group graph-filter-button col-12 d-flex flex-wrap flex-md-nowrap" role="group" aria-label="Filters">
                        <button t-att-class="state.period === 'Today' ? 'graph-filter-btn active' : 'graph-filter-btn'"
                                t-on-click="() => { this.state.period = 'Today'; this.acsOnChangePeriod(); }"
                                t-att-style="'background-color: ' + state.evaluationChartColor + ';'">
                            <span>Today</span>
                        </button>
                        <button t-att-class="state.period === 'Week' ? 'graph-filter-btn active' : 'graph-filter-btn'"
                                t-on-click="() => { this.state.period = 'Week'; this.acsOnChangePeriod(); }"
                                t-att-style="'background-color: ' + state.evaluationChartColor + ';'">
                            <span>Week</span>
                        </button>
                        <button t-att-class="state.period === 'Month' ? 'graph-filter-btn active' : 'graph-filter-btn'"
                                t-on-click="() => { this.state.period = 'Month'; this.acsOnChangePeriod(); }"
                                t-att-style="'background-color: ' + state.evaluationChartColor + ';'">
                            <span>Month</span>
                        </button>
                        <button t-att-class="state.period === 'Year' ? 'graph-filter-btn active' : 'graph-filter-btn'"
                                t-on-click="() => { this.state.period = 'Year'; this.acsOnChangePeriod(); }"
                                t-att-style="'background-color: ' + state.evaluationChartColor + ';'">
                            <span>Year</span>
                        </button>
                        <button t-att-class="state.period === 'Till_Now' ? 'graph-filter-btn active' : 'graph-filter-btn'"
                                t-on-click="() => { this.state.period = 'Till_Now'; this.acsOnChangePeriod(); }"
                                t-att-style="'background-color: ' + state.evaluationChartColor + ';'">
                            <span>Till Now</span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="hms-graph-content">
                <div class="hms-graph-main-content">
                    <div class="hms-graph-section">
                        <div class="row">
                            <!-- Weight Chart -->
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="hms-graph-card">
                                    <div class="hms-graph-chart-header" t-att-style="'background-color: ' + state.evaluationChartColor + '; opacity: 0.9;'">
                                        <img t-att-src="'/acs_hms/static/src/img/evaluation_graph.gif'" class="hms-graph-widget"/>
                                        <span class="hms-chart-header-text">Weight Chart</span>
                                    </div>
                                    <div class="hms-graph-chart-body">
                                        <div t-ref="acsWeightChartContainer" id='acsWeightChartContainer' style="width: 100%; height: 300px;padding:10px"></div>
                                    </div>
                                </div>
                            </div>

                            <!-- Height Chart -->
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="hms-graph-card">
                                    <div class="hms-graph-chart-header" t-att-style="'background-color: ' + state.evaluationChartColor + '; opacity: 0.9;'">
                                        <img t-att-src="'/acs_hms/static/src/img/evaluation_graph.gif'" class="hms-graph-widget"/>
                                        <span class="hms-chart-header-text">Height Chart</span>
                                    </div>
                                    <div class="hms-graph-chart-body">
                                        <div t-ref="acsHeightChartContainer" id='acsHeightChartContainer' style="width: 100%; height: 300px;padding:10px"></div>
                                    </div>
                                </div>
                            </div>

                            <!-- Temperature Chart -->
                            <div class="col-lg-12 col-md-12 col-sm-12">
