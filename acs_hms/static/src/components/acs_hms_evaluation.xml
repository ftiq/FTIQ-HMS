                                        <span class="hms-chart-header-text">Temperature Chart</span>
                                    </div>
                                    <div class="hms-graph-chart-body">
                                        <div t-ref="acsTempChartContainer" id='acsTempChartContainer' style="width: 100%; height: 300px;padding:10px"></div>
                                    </div>
                                </div>
                            </div>

