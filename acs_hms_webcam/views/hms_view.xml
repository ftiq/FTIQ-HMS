<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="acs_webcam_hms_patient_view" model="ir.actions.client">
        <field name="name">Webcam</field>
        <field name="tag">AcsWebCam</field>
        <field name="res_model">hms.patient</field>
    </record>

    <record id="view_patient_form" model="ir.ui.view" >
        <field name="name">hms.patient.form.inherited</field>
        <field name="model">hms.patient</field>
        <field name="inherit_id" ref="acs_hms_base.view_patient_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[1]/group[1]" position="before">
                <button name="%(acs_hms_webcam.acs_webcam_hms_patient_view)d" 
                        type="action" data-hotkey="p"
                        class="btn btn-link d-flex align-items-center justify-content-start p-0">
                    <span class="o_button_icon fa fa-fw fa-camera me-1" style="margin-left: 30px; margin-top: -8px;"></span>
                    <span style="margin-left: 4px; margin-top: -8px;">Take Picture</span>
                </button>
            </xpath>
        </field>
    </record>

    <record id="acs_webcam_hms_physician_view" model="ir.actions.client">
        <field name="name">Webcam</field>
        <field name="tag">AcsWebCam</field>
        <field name="res_model">hms.physician</field>
    </record>

    <record id="view_physician_form" model="ir.ui.view" >
        <field name="name">hms.physician.form.inherited</field>
        <field name="model">hms.physician</field>
        <field name="inherit_id" ref="acs_hms_base.view_physician_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='image_1920']" position="after">
                <div class="float-end">
                    <div style="position: absolute; padding-top: 95px;">
                        <button name="%(acs_hms_webcam.acs_webcam_hms_physician_view)d" 
                                type="action" data-hotkey="p"
                                class="btn btn-link d-flex align-items-center justify-content-start p-0">
                            <span class="o_button_icon fa fa-fw fa-camera me-1"></span>
                            <span>Take Picture</span>
                        </button>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
