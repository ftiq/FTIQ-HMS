<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Partner -->
    <record model="ir.ui.view" id="view_partner_form">
        <field name="name">res.partner.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name='button_box' position="inside">
                <button name="action_open_consent_form" type="object" class="oe_stat_button" icon="fa-pencil-square-o" groups="acs_consent_form.group_consent_form_manager">
                    <field string="Consent Forms" name="acs_consent_form_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>

    <!--Digital Document -->
    <record id="view_acs_consent_form_list" model="ir.ui.view">
        <field name="name">Consent Form Tree</field>
        <field name="model">acs.consent.form</field>
        <field name="arch" type="xml">
            <list string="Consent Forms">
                <field name="name"/>
                <field name="subject"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="date"/>
                <field name="state" decoration-info="state=='draft'" decoration-warning="state=='tosign'" decoration-success="state=='signed'" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="view_acs_consent_form_search" model="ir.ui.view">
        <field name="name">Consent Form Search</field>
        <field name="model">acs.consent.form</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">            
            <search string="Consent Form">
                <field name="name"/>
                <field name="subject"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="date"/>
                <field name="state"/>
                <field name="tag_ids" string="Tag" filter_domain="[('tag_ids', 'ilike', self)]"/>
                <newline/>
            </search>
        </field>
    </record>

    <record id="view_acs_consent_form_form" model="ir.ui.view">
        <field name="name">Consent Form</field>
        <field name="model">acs.consent.form</field>
        <field name="arch" type="xml">
            <form string="Consent Form">
                <header>
                    <button name="action_to_sign" string="To Sign" class="oe_highlight" type="object" invisible="state!='draft'"/>
                    <button name="action_signed" string="Signed" class="oe_highlight" type="object" invisible="state!='tosign'"/>
                    <button name="action_send_by_mail" string="Send By Mail" class="oe_highlight" type="object" invisible="state!='tosign'"/>
                    <button name="action_reset_to_draft" string="Reset To Draft" class="oe_highlight" type="object" invisible="state!='tosign'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="preview_consent_form" type="object" class="oe_stat_button" icon="fa-globe icon">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Customer</span>
                                <span class="o_stat_text">Preview</span>
                            </div>
                        </button> 
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="subject" readonly="state!='draft'"/>
                            <field name="partner_id" required="True" readonly="state!='draft'"/>
                            <field name="user_id" required="True" readonly="state!='draft'"/>
                            <field name="tag_ids" widget="many2many_tags" readonly="state!='draft'"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" readonly="state!='draft'"/>
                        </group>
                        <group>
                            <field name="date" required="True" readonly="state!='draft'"/>
                            <label for="template_id"/>
                            <div name='template_id'>
                                <field name='template_id' class="oe_inline" nolabel="1" widget="selection" readonly="state!='draft'"/>
                                <button name="apply_template" string="Get Data" type="object" class="oe_inline fa fa-arrow-right oe_link" invisible="state!='draft' or not template_id"/>
                            </div>
                            <field name="print_header_in_report" readonly="state!='draft'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Document">
                            <field name="consent_form_content" nolabel="1" placeholder="Digital Document Content" readonly="state!='draft'"/>
                        </page>
                        <page string="Other Information">
                            <group>
                                <field name="acs_access_url" readonly="1"  widget="CopyClipboardChar"/>
                                <field name="acs_has_to_be_signed" invisible="1"/>
                                <field name="acs_signed_on" readonly="1"/>
                                <field name="acs_signature" widget="image" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>

            </form>
        </field>
    </record>

    <record id="action_acs_consent_form" model="ir.actions.act_window">
        <field name="name">Consent Form</field>
        <field name="path">almightycs-consent-form</field>
        <field name="res_model">acs.consent.form</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_acs_consent_form_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add a Digital Document.
            </p>
        </field>
    </record>

    <!--Digital Document Template-->
    <record id="view_acs_consent_form_template_list" model="ir.ui.view">
        <field name="name">Consent Form Template</field>
        <field name="model">acs.consent.form.template</field>
        <field name="arch" type="xml">
            <list string="Consent Form Template">
                <field name="name"/>
                <field name="active" column_invisible="1"/>
            </list>
        </field>
    </record>

    <record id="view_acs_consent_form_template_search" model="ir.ui.view">
        <field name="name">Consent Form Template</field>
        <field name="model">acs.consent.form.template</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <search string="Consent Form Template">
                <field name="name"/>
                <newline/>
            </search>
        </field>
    </record>

    <record id="view_acs_consent_form_template_form" model="ir.ui.view">
        <field name="name">Consent Form Template</field>
        <field name="model">acs.consent.form.template</field>
        <field name="arch" type="xml">
            <form string="Consent Form Template">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    <group colspan="2" cols="2"> 
                        <field name="name" required="True"/>
                        <field name="active" invisible="1"/>
                    </group>
                    <div>
                        <label for="consent_form_content"/>
                        <field name="consent_form_content" placeholder="Content" widget="html" class="oe-bordered-editor" options="{'style-inline': true, 'codeview': true, 'dynamic_placeholder': true}"/>
                    </div>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_acs_consent_form_template_view" model="ir.actions.act_window">
        <field name="name">Consent Form Template</field>
        <field name="path">almightycs-consent-template</field>
        <field name="res_model">acs.consent.form.template</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_acs_consent_form_template_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add Consent Form Template.
            </p>
        </field>
    </record>

</odoo>