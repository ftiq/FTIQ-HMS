<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <data noupdate="1">

        <record id="acs_surgery_privilege" model="res.groups.privilege" >
            <field name="name">Surgery</field>
            <field name="sequence">16</field>
            <field name="category_id" ref="acs_hms_base.module_category_hms"/>
        </record>

        <record id="group_acs_hms_surgery_user" model="res.groups">
            <field name="name">User</field>
            <field name="privilege_id" ref="acs_hms_surgery.acs_surgery_privilege"/>
            <field name="implied_ids" eval="[Command.link(ref('acs_hms_base.group_hms_user'))]"/>
        </record>

        <record id="group_acs_hms_surgery_approver" model="res.groups">
            <field name="name">Approver</field>
            <field name="privilege_id" ref="acs_hms_surgery.acs_surgery_privilege"/>
            <field name="implied_ids" eval="[Command.link(ref('acs_hms_surgery.group_acs_hms_surgery_user'))]"/>
        </record>

        <record id="group_acs_hms_surgery_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="privilege_id" ref="acs_hms_surgery.acs_surgery_privilege"/>
            <field name="implied_ids" eval="[Command.link(ref('acs_hms_surgery.group_acs_hms_surgery_approver'))]"/>
            <field name="user_ids" eval="[Command.link(ref('base.user_root')), Command.link(ref('base.user_admin'))]"/>
        </record>

        <record id="surgery_comp_user_rule" model="ir.rule">
            <field name="name">Surgery multi-company</field>
            <field name="model_id" ref="acs_hms_surgery.model_hms_surgery"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>

        <record id="surgery_dep_user_rule" model="ir.rule">
            <field name="name">Surgery multi-Department</field>
            <field name="model_id" ref="acs_hms_surgery.model_hms_surgery"/>
            <field name="domain_force">['|', ('department_id', '=', False), ('department_id', 'in', [dep.id for dep in user.department_ids])]</field>
        </record>

        <record id="surgery_cmp_manager_rule" model="ir.rule">
            <field name="name">Patient Rule for Medical Officer</field>
            <field name="model_id" ref="acs_hms_surgery.model_hms_surgery"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[Command.link(ref('acs_hms.group_hms_medical_officer')), Command.link(ref('acs_hms_base.group_hms_manager'))]"/>
        </record>

    </data>
</odoo>
