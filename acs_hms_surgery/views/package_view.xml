<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Package -->
    <record id="acs_hms_package_search" model="ir.ui.view">
        <field name="name">acs.hms.package.search</field>
        <field name="model">acs.hms.package</field>
        <field name="arch" type="xml">
            <search string="Package">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="create_date"/>
            </search>
        </field>
    </record>

    <record id="acs_hms_package_form_view" model="ir.ui.view">
        <field name="name">acs.hms.package.form</field>
        <field name="model">acs.hms.package</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" nolable="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="package_type"/>
                        </group>
                        <group>
                            <field name="product_id" required="package_type=='dynamic'"/>
                            <field name="service_amount"/>
                            <label for="pricelist_id" groups="product.group_product_pricelist" />
                            <div name='pricelist_id' groups="product.group_product_pricelist">
                                <field name="pricelist_id" options="{'no_open':True, 'no_create': True}" class="oe_inline"/>
                                <button name="acs_update_product_price" class="btn btn-link" type="object" invisible="not pricelist_id">
                                    <i class="fa fa-arrow-right oe_link me-1"/><span> Update Price</span>
                                </button>
                            </div>
                            <field name="company_id" groups="base.group_multi_company" string="Hospital" options="{'no_create': True}"/>
                            <field name="company_id" invisible="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="lines" string="Lines">
                            <field name="order_line" widget="product_label_section_and_note_field_o2m">
                                <list string="Package Lines" editable="bottom">
                                    <control>
                                        <create string="Add a line"/>
                                        <create string="Add a section" context="{'default_display_type': 'line_section'}"/>
                                    </control>
                                    
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id" required="not display_type" widget="product_label_section_and_note_field"/>
                                    <field name="name" widget="section_and_note_text"/>
                                    <field name="product_uom_qty" string="Qty" required="not display_type"/>
                                    <field name="product_uom_id" options='{"no_open": True}' required="not display_type" groups="uom.group_uom"/>
                                    <field name="price_unit"/>
                                    <field name="discount"/>
                                    <field name="tax_id" widget="many2many_tags"/>
                                    <field name="price_subtotal"/>
                                    <field name="display_type" column_invisible="1"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="package_total">
                                <field name="amount_untaxed" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                <field name="amount_tax" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                <label for="amount_total" />
                                <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            </group>
                        </page>
                        <page name="description" string="Description">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="acs_hms_package_list_view" model="ir.ui.view">
        <field name="name">acs.hms.package.list</field>
        <field name="model">acs.hms.package</field>
        <field name="arch" type="xml">
            <list string="Package">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </list>
        </field>
    </record>

    <record id="acs_hms_package_action" model="ir.actions.act_window">
        <field name="name">Package</field>
        <field name="path">almightyhms-package</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">acs.hms.package</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="acs_hms_package_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to define a new Package.
            </p>
        </field>
    </record>

</odoo>