<odoo>
    <template id="acs_report_patient_history_radiology" inherit_id="acs_hms.acs_report_patient_history_template">
        <xpath expr="//div[@name='diagnoses']" position="after">
            <t t-set="radiology" t-value="doc.acs_patient_history_report().get('radiology')"/>
            <div class="mt-3">
                <t t-if="radiology and radiology.patient_test_ids">
                    <h5 class="mb-2"><b>Radiology Reports</b></h5>
                    <table class="table table-bordered table-sm align-middle text-center" style="page-break-inside: avoid; table-layout: fixed;">
                        <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Test Type</th>
                                <th>Findings</th>
                            </tr>
                        </thead>
                        <tbody class="text-start">
                            <t t-foreach="radiology.patient_test_ids" t-as="line">
                                <tr>
                                    <td><span t-esc="line.date_analysis.strftime('%d-%m-%Y') if line.date_analysis else ''"/></td>
                                    <td><span t-field="line.test_id"/></td>
                                    <td><span t-field="line.diagnosis"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </t>
            </div>
        </xpath>
    </template>
</odoo>