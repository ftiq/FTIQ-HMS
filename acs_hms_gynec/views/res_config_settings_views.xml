<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="acs_hms.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@name='patient_setting_container']/setting[@id='default_patient_head_circumference_measure_setting']" position="after">
                <setting help="Set the default Patient Hemoglobin measure." id="default_patient_hb_measure_setting">
                    <field name="patient_hb_measure_uom" class="o_light_label"/>
                </setting>
                <setting help="Set the default Urine measure." id="default_patient_urine_measure_setting">
                    <field name="patient_urine_measure_uom" class="o_light_label"/>
                </setting>
                <setting help="Set the default S Creatinine measure." id="default_patient_screatinine_measure_setting">
                    <field name="patient_screatinine_measure_uom" class="o_light_label"/>
                </setting>
            </xpath>
        </field>
    </record>

</odoo>