<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_sono_pelvis_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context({'lang':doc.patient_id.lang})"/>
            <div class="page">
                <t t-call="acs_hms_base.patient_information_template">
                    <t t-set="patient" t-value="doc.patient_id"/>
                    <t t-set="sono_pelvis" t-value="doc"/>
                </t>

                <div class="mb32">
                    <div class="text-center">
                        <h3>
                            <strong>
                                <u><i>ULTRASONOGRAPHY PELVIS</i></u>
                            </strong>
                        </h3>
                    </div>
                </div>

                <table class="table">
                    <tr>
                        <td>
                            &#x25cf; <span class="ml16"> Uterus is </span><strong><span t-field="doc.uterus"/></strong> measures <strong> <span t-field="doc.uterus_size"/></strong>  mm in size
                        </td>
                    </tr>
                    <tr t-if="doc.endometrial_echo_seen_centrally">
                        <td>
                            &#x25cf; <span class="ml16">Endometrial echo is seen Centrally</span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            &#x25cf;<span class="ml16">Endometrial thickness is </span>
                            <strong><span t-field="doc.endometrial_thickness"/></strong> mm
                        </td>
                    </tr>
                    <tr t-if="doc.evidence_of_intrauterine">
                        <td>
                            &#x25cf; <span class="ml16">There is no evidence of intrauterine or extrauterine mass or gestation.</span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            &#x25cf; <span class="ml16">Left Ovary measures</span>
                            <strong> <span t-field="doc.left_ovary_size"/></strong> mm
                        </td>
                    </tr>
                    <tr>
                        <td>
                            &#x25cf; <span class="ml16">Right Ovary measures</span>
                            <strong> <span t-field="doc.right_ovary_size"/></strong> mm
                        </td>
                    </tr>
                    <tr t-if="doc.free_fluid_in_pod">
                        <td>
                            &#x25cf;<span class="ml16">There is no free fluid in POD ( Pouch of Douglas)</span>
                        </td>
                    </tr>
                    <tr t-if="doc.cerix_normal">
                        <td>
                            &#x25cf; <span class="ml16">Cerix appears to be normal</span>
                        </td>
                    </tr>
                </table>
                <div class="col-md-12 mt8 mb32">
                    <b>Conclusion</b>: <span class="ml32" t-field="doc.conclusion" />
                </div>
                <div class="row mt16" t-if="doc.sudo().physician_id and doc.sudo().physician_id.signature">
                    <div class="col-6" id="signature">
                        <b>Doctorâ€™s Stamp/Signature</b>
                        <br/>
                        <img t-att-src="image_data_uri(doc.sudo().physician_id.signature)" alt="Sign" style="max-height: 100px !important;"/>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="report_sono_pelvis">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="acs_hms_gynec.report_sono_pelvis_document" />
            </t>
        </t>
    </template>

    <record id="action_report_sono_pelvis" model="ir.actions.report">
        <field name="name">Sonography Pelvis Report</field>
        <field name="model">hms.appointment.sonography.pelvis</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">acs_hms_gynec.report_sono_pelvis</field>
        <field name="report_file">acs_hms_gynec.report_sono_pelvis</field>
        <field name="binding_model_id" ref="model_hms_appointment_sonography_pelvis"/>
        <field name="binding_type">report</field>
    </record>

</odoo>