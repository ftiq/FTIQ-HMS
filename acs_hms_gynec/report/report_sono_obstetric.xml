<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_sono_obstetric_document">
        <t t-call="web.external_layout">
            <div class="page col-xs-offset-2"
                style="margin-left:50px !important;margin-right:30px !important;">
                <div class="mt64 oe_structure" />

                <div class="col-md-12 mt32">
                    <font color="white">...</font>
                </div>

                <t t-call="acs_hms_base.patient_information_template">
                    <t t-set="patient" t-value="doc.patient_id"/>
                    <t t-set="sono_obstetric" t-value="doc"/>
                </t>

                <div>
                    <div class="text-center mt4 mb4" style="border: 1px solid black; border-radius: 25px;">
                        <h3>
                            <strong>OBSTETRIC ULTRA SONOGRAPHY</strong>
                        </h3>
                    </div>
                </div>

                <table class="table">
                    <tr>
                        <td style="border: none;">
                            1. L.M.P:
                            <span t-field="doc.lmp" />
                        </td>
                    </tr>
                    <tr>
                        <td style="border: none;">
                            2. No. Of Fetues:
                            <span t-field="doc.fetues" />
                        </td>
                    </tr>
                    <tr>
                        <td style="border: none;" class="col-xs-4">
                            3. Presentation:
                            <span t-field="doc.presentation" />
                        </td>
                        <td style="border: none;" class="col-xs-4">
                            Position: 
                            <span t-field="doc.position" />
                        </td>
                    </tr>
                    <tr>
                        <td style="border: none;" class="col-xs-4">
                            4. Cardiac Activity:
                            <span t-field="doc.cardiac_activity" />
                        </td>
                        <td style="border: none;" class="col-xs-74">
                            FHR:
                            <span t-field="doc.fhr" />
                        </td>
                    </tr>
                    <tr>
                        <td style="border: none;">
                            5. Fetal Movement:
                            <span t-field="doc.fetal_movement" />
                        </td>
                    </tr>
                    <tr>
                        <td style="border: none;">
                            6. Placenta:
                            <span t-field="doc.placenta" />
                        </td>
                    </tr>
                    <tr>
                        <td style="border: none;">
                            7. Amniotic Fluid:
                            <span t-field="doc.amniotic_fluid" />
                        </td>
                    </tr>
                    <tr>
                        <td style="border: none;">8. Fetal Parameters </td>
                    </tr>
                </table>
                <table class="table" border="1" style="border: 1px solid black;">
                    <thead>
                        <tr style="background : #BFCDCD;">
                            <th class="text-center" style="border: 1px solid black;">BPD</th>
                            <th class="text-center" style="border: 1px solid black;">FL.</th>
                            <th class="text-center" style="border: 1px solid black;">HC</th>
                            <th class="text-center" style="border: 1px solid black;">AC</th>
                            <th class="text-center" style="border: 1px solid black;">CRL</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr style="border: 1px solid black;">
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-field="doc.bpd" />
                                m.m
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-field="doc.fl" />
                                m.m
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-field="doc.hc" />
                                m.m
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-field="doc.ac" />
                                m.m
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-field="doc.crl" />
                                m.m
                            </td>
                        </tr>
                        <tr style="border: 1px solid black;">
                            <td class="text-center" style="border: 1px solid black;">
                                Weeks.
                                <font color="white">......</font>
                                Days
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                Weeks.
                                <font color="white">......</font>
                                Days
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                Weeks.
                                <font color="white">......</font>
                                Days
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                Weeks.
                                <font color="white">......</font>
                                Days
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                Weeks.
                                <font color="white">......</font>
                                Days
                            </td>
                        </tr>
                        <tr style="border: 1px solid black;">
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-field="doc.bpd_weeks" />
                                <font color="white">.........</font>
                                <span t-field="doc.bpd_days" />
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-field="doc.fl_weeks" />
                                <font color="white">.........</font>
                                <span t-field="doc.fl_days" />
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-field="doc.hc_weeks" />
                                <font color="white">.........</font>
                                <span t-field="doc.hc_days" />
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-field="doc.ac_weeks" />
                                <font color="white">.........</font>
                                <span t-field="doc.ac_days" />
                            </td>
                            <td class="text-center" style="border: 1px solid black;">
                                <span t-field="doc.crl_weeks" />
                                <font color="white">.........</font>
                                <span t-field="doc.crl_days" />
                            </td>
                        </tr>
                    </tbody>
                </table>
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
                <table class="table">
                    <tr>
                        <td class="col-xs-4" style="border: none;">
                            9. Average Estimated Fetal Age:
                            <span t-field="doc.fetal_age" />
                        </td>
                        <td class="col-xs-4" style="border: none;">
                            EDD:
                            <span t-field="doc.edd" />
                        </td>
                    </tr>
                    <tr>
                        <td style="border: none;">
                            10. Estimated Fetal Weight:
                            <span t-field="doc.fetal_weight" />
                        </td>
                    </tr>
                    <tr>
                        <td style="border: none;">
                            11. Cervix: Length:
                            <span t-field="doc.cerrvix_lenght" />
                            mm
                        </td>
                        <td style="border: none;">
                            Width:
                            <span t-field="doc.cerrvix_width" />
                            mm
                        </td>
                    </tr>
                    <tr>
                        <td style="border: none;">
                            12. Internal OS:
                            <span t-field="doc.internalos" />
                        </td>
                    </tr>
                    <tr>
                        <td style="border: none;">
                            13. Any Sonographically detectable fetal anomaly:
                            <span t-field="doc.sono_fetal_anomaly" />
                        </td>
                    </tr>
                </table>
                <div class="col-md-12 mb8" id="gender_warning">
                    <span>
                        <strong>I HAVE NEITHER DETECTED NOR DISCLOSED THE SEX FOR HER
                            FOETUS TO ANY BODY IN ANY MANNER</strong>
                    </span>
                </div>
                <div class="col-md-12">
                    <span>
                        <u>Impression:</u>
                    </span>
                    <strong>
                        <span t-field="doc.impression" />
                    </strong>
                </div>
                <div class="row mt16" t-if="doc.sudo().physician_id and doc.sudo().physician_id.signature">
                    <div class="col-6" id="signature">
                        <b>Doctorâ€™s Stamp/Signature</b>
                        <br/>
                        <img t-att-src="image_data_uri(doc.sudo().physician_id.signature)" alt="Sign" style="max-height: 100px !important;"/>
                    </div>
                </div>
                <div class="oe_structure" />
            </div>
        </t>
    </template>

    <template id="report_sono_obstetric">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="acs_hms_gynec.report_sono_obstetric_document" />
            </t>
        </t>
    </template>

    <record id="action_report_sono_obstetric" model="ir.actions.report">
        <field name="name">Sonography Obstetric Reports</field>
        <field name="model">hms.appointment.sonography.obstetric</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">acs_hms_gynec.report_sono_obstetric</field>
        <field name="report_file">acs_hms_gynec.report_sono_obstetric</field>
        <field name="binding_model_id" ref="model_hms_appointment_sonography_obstetric"/>
        <field name="binding_type">report</field>
    </record>

</odoo>