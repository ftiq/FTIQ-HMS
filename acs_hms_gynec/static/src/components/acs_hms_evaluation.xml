<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="acsHmsEvaluationChartnherit" t-inherit="acs_hms.AcsHmsEvaluationChart" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('hms-graph-section')]/div[hasclass('row')]" position="inside">
            <!-- Hemoglobin (HB) Chart -->
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="hms-graph-card">
                    <div class="hms-graph-chart-header" 
                         t-att-style="'background-color: ' + state.evaluationChartColor + '; opacity: 0.9;'">
                        <img t-att-src="'/acs_hms/static/src/img/evaluation_graph.gif'" class="hms-graph-widget"/>
                        <span class="hms-chart-header-text">Hemoglobin (HB)</span>
                    </div>
                    <div class="hms-graph-chart-body">
                        <div t-ref="acsHbChartContainer" id="acsHbChartContainer" 
                             style="width: 100%; height: 300px; padding:10px;"></div>
                    </div>
                </div>
            </div>

            <!-- Urine Chart -->
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="hms-graph-card">
                    <div class="hms-graph-chart-header" 
                         t-att-style="'background-color: ' + state.evaluationChartColor + '; opacity: 0.9;'">
                        <img t-att-src="'/acs_hms/static/src/img/evaluation_graph.gif'" class="hms-graph-widget"/>
                        <span class="hms-chart-header-text">Urine</span>
                    </div>
                    <div class="hms-graph-chart-body">
                        <div t-ref="acsUrineChartContainer" id="acsUrineChartContainer" 
                             style="width: 100%; height: 300px; padding:10px;"></div>
                    </div>
                </div>
            </div>

            <!-- S Creatinine Chart -->
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="hms-graph-card">
                    <div class="hms-graph-chart-header" 
                         t-att-style="'background-color: ' + state.evaluationChartColor + '; opacity: 0.9;'">
                        <img t-att-src="'/acs_hms/static/src/img/evaluation_graph.gif'" class="hms-graph-widget"/>
                        <span class="hms-chart-header-text">S Creatinine</span>
                    </div>
                    <div class="hms-graph-chart-body">
                        <div t-ref="acsScreatinineChartContainer" id="acsScreatinineChartContainer" 
                             style="width: 100%; height: 300px; padding:10px;"></div>
                    </div>
                </div>
            </div>
        </xpath>
    </t>
</templates>