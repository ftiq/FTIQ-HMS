<?xml version="1.0" encoding="utf-8"?>
<odoo>
   
    <record model="ir.module.category" id="certificate_category">
        <field name="name">Certificate</field>
        <field name="description">Manage your Certificates</field>
        <field name="sequence">66</field>
    </record>

    <record id="acs_certificate_privilege" model="res.groups.privilege" >
        <field name="name">Certificate</field>
        <field name="category_id" ref="certificate_category"/>
    </record>

    <record id="group_certificate_user" model="res.groups">
        <field name="name">User</field>
        <field name="privilege_id" ref="acs_certificate_privilege"/>
    </record>

    <record id="group_certificate_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="privilege_id" ref="acs_certificate_privilege"/>
        <field name="user_ids" eval="[Command.link(ref('base.user_root')), Command.link(ref('base.user_admin'))]"/>
        <field name="implied_ids" eval="[Command.link(ref('acs_certification.group_certificate_user'))]"/>
    </record>

    <data noupdate="1">
        
        <record model="ir.rule" id="certificate_company_rule">
            <field name="name">Certificate multi-company</field>
            <field name="model_id" ref="model_certificate_management"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>

        <record id="certificate_portal_rule" model="ir.rule">
            <field name="name">Portal: Own Certificate</field>
            <field name="model_id" ref="model_certificate_management"/>
            <field name="domain_force">[('partner_id','=',user.commercial_partner_id.id)]</field>
            <field name="groups" eval="[Command.link(ref('base.group_portal'))]"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
        </record>

    </data>
</odoo>
