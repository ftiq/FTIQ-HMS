<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_acs_hms_invoice_list" model="ir.ui.view">
        <field name="name">acs.hms.invoice.list</field>
        <field name="model">acs.hms.invoice</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="patient_id"/>
                <field name="date"/>
                <field name="amount_total" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
            </list>
        </field>
    </record>

    <record id="view_acs_hms_invoice_form" model="ir.ui.view">
        <field name="name">acs.hms.invoice.form</field>
        <field name="model">acs.hms.invoice</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Patient Invoice">
                <header>
                    <button name="acs_get_patient_data" string="Get Data" invisible="state!='draft'" type="object" class="oe_highlight"/>
                    <button name="acs_create_invoice" string="Create Invoice" invisible="state!='draft'" type="object" class="oe_highlight"/>
                    <button name="action_cancel" string="Cancel" invisible="state!='draft'" type="object"/>
                    <button name="action_reset_to_draft" string="Reset To Draft" invisible="state!='cancel'" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box" groups="acs_hms.group_hms_receptionist">
                        <button class="oe_stat_button" type="object" name="view_invoice" icon="fa-pencil-square-o" string="Invoices">
                        </button>
                    </div>
                    <div class="oe_title" invisible="not name">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id" readonly="state!='draft'"/>
                            <field name="patient_phone" readonly="state!='draft'"/>
                            <field name="patient_age" readonly="state!='draft'"/>
                            <field name="discount_type" readonly="state!='draft'"/>
                        </group>
                        <group>
                            <field name="user_id" readonly="state!='draft'"/>
                            <field name="date" readonly="state!='draft'"/>
                            <field name="payment_journal_id" readonly="state!='draft'"/>
                            <field name="discount_amount" invisible="discount_type != 'fixed'" required="discount_type == 'fixed'" readonly="state!='draft'"/>
                            <field name="discount_percentage" invisible="discount_type != 'percentage'" required="discount_type == 'percentage'" readonly="state!='draft'"/>
                            <field name="invoice_id" readonly="1" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="lines" string="Lines">
                            <field name="line_ids" widget="product_label_section_and_note_field_o2m" readonly="1">
                                <list string="Invoice Lines" editable="bottom">
                                    <field name="display_type" column_invisible="1"/>
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id" required="not display_type" widget="product_label_section_and_note_field"/>
                                    <field name="name" widget="section_and_note_text"/>
                                    <field name="quantity" string="Qty" required="not display_type"/>
                                    <field name="product_uom_id" options='{"no_open": True}' required="not display_type" groups="uom.group_uom"/>
                                    <field name="price_unit"/>
                                    <field name="discount"/>
                                    <field name="tax_ids" widget="many2many_tags"/>
                                    <field name="price_subtotal"/>
                                </list>
                            </field>
                        </page>
                        <page string="Appointments">
                            <field name="appointment_ids" readonly="1" force_save="1"/>
                            <group class="oe_subtotal_footer oe_right mt32" colspan="2" name="total">
                                <field name="appointment_total"/>
                            </group>
                        </page>
                        <page string="Surgeries">
                            <field name="surgery_ids" readonly="1" force_save="1"/>
                            <group class="oe_subtotal_footer oe_right mt32" colspan="2" name="total">
                                <field name="surgery_total"/>
                            </group>
                        </page>
                        <page string="Procedures">
                            <field name="procedure_ids" readonly="1" force_save="1"/>
                            <group class="oe_subtotal_footer oe_right mt32" colspan="2" name="total">
                                <field name="procedure_total"/>
                            </group>
                        </page>
                        <page string="Vaccinations">
                            <field name="vaccination_ids" readonly="1" force_save="1"/>
                            <group class="oe_subtotal_footer oe_right mt32" colspan="2" name="total">
                                <field name="vaccination_total"/>
                            </group>
                        </page>
                        <page string="Hospitalizations">
                            <field name="hospitalization_ids" readonly="1" force_save="1"/>
                            <group class="oe_subtotal_footer oe_right mt32" colspan="2" name="total">
                                <field name="hospitalization_total"/>
                            </group>
                        </page>
                    </notebook>
                    <group class="oe_subtotal_footer oe_right mt32" colspan="2" name="total">
                        <field name="amount_untaxed" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                        <field name="amount_tax" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                        <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                            <label for="amount_total"/>
                        </div>
                        <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_acs_hms_invoice" model="ir.actions.act_window">
        <field name="name">Patient Invoice</field>
        <field name="res_model">acs.hms.invoice</field>
        <field name="view_mode">list,form</field>
        <field name="path">almightyhms-patient-invoice</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
        </field>
    </record>

</odoo>