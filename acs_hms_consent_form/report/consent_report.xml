<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="patient_information_template" inherit_id="acs_hms_base.patient_information_template">
        <xpath expr="//tr[@name='patient_gov_phone_tr']" position="after">
            <tr name="patient_consent_form_data" t-if="consent_form">
                <td name="consent_form_reg_no">
                    <strong class="text-center ms-2">Reg No:</strong> <span t-field="consent_form.name"/>
                </td>
                <td name="consent_form_given_by">
                    <strong>Given By:</strong> <span t-field="consent_form.sudo().user_id.name"/>
                </td>
            </tr>
            <tr name="patient_consent_form_data_2" t-if="consent_form">
                <td name="consent_form_date">
                    <strong class="text-center ms-2">Date :</strong> <span t-field="consent_form.date"/>
                </td>
                <td name="consent_form_null"></td>
            </tr>
        </xpath>
    </template>

    <template id="consent_form_report_document" inherit_id="acs_consent_form.consent_form_report_document">
        <xpath expr="//t[@t-if='doc.print_header_in_report']/table" position="replace">
            <t t-call="acs_hms_base.patient_information_template">
                <t t-set="patient" t-value="doc.patient_id"/>
                <t t-set="consent_form" t-value="doc"/>
            </t>
        </xpath>
        <xpath expr="//div[@name='sign_three']" position="inside">
            <strong t-if="doc.physician_id.signature">Doctor Signature</strong><br/>
            <img t-if="doc.physician_id.signature" t-att-src="image_data_uri(doc.physician_id.signature)" class="float-left" style="width: 225px;" alt="Signature"/><br/>
            <span t-if="doc.physician_id" t-field="doc.physician_id.name"/><br/>
        </xpath>
    </template>

</odoo>