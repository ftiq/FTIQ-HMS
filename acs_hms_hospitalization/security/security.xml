<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="acs_hms_hospitalization_privilege" model="res.groups.privilege" >
        <field name="name">Hospitalization</field>
        <field name="category_id" ref="acs_hms_base.module_category_hms_department"/>
    </record>
 
    <record id="group_acs_hms_hospitalization_user" model="res.groups">
        <field name="name">User</field>
        <field name="privilege_id" ref="acs_hms_hospitalization_privilege"/>
        <field name="implied_ids" eval="[Command.link(ref('acs_hms_surgery.group_acs_hms_surgery_user'))]"/>
    </record>

    <record id="group_acs_hms_hospitalization_executive" model="res.groups">
        <field name="name">Executive</field>
        <field name="privilege_id" ref="acs_hms_hospitalization_privilege"/>
        <field name="implied_ids" eval="[Command.link(ref('acs_hms_hospitalization.group_acs_hms_hospitalization_user'))]"/>
    </record>

    <record id="group_acs_hms_hospitalization_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="privilege_id" ref="acs_hms_hospitalization_privilege"/>
        <field name="implied_ids" eval="[Command.link(ref('acs_hms_hospitalization.group_acs_hms_hospitalization_executive'))]"/>
        <field name="user_ids" eval="[Command.link(ref('base.user_root')), Command.link(ref('base.user_admin'))]"/>
    </record>
    
    <data noupdate="1">

        <record id="acs_hospitalization_department_rule" model="ir.rule">
            <field name="name">Hospitalization: Departments</field>
            <field name="model_id" ref="model_acs_hospitalization"/>
            <field name="domain_force">['|', ('department_id', '=', False), ('department_id', 'in', [dep.id for dep in user.department_ids])]</field>
        </record>

        <record model="ir.rule" id="hospitalization_comp_rule">
            <field name="name">Hospitalization multi-company</field>
            <field name="model_id" ref="model_acs_hospitalization"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>

        <record id="hms_all_hospitalization_rule" model="ir.rule">
            <field name="name">All Hospitalization Rule</field>
            <field name="model_id" ref="model_acs_hospitalization"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[Command.link(ref('acs_hms_base.group_hms_manager'))]"/>
        </record>

        <record model="ir.rule" id="death_reg_comp_rule">
            <field name="name">Death Register multi-company</field>
            <field name="model_id" ref="model_patient_death_register"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>

        <record id="death_reg_all_rule" model="ir.rule">
            <field name="name">All Death Registers</field>
            <field name="model_id" ref="model_patient_death_register"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[Command.link(ref('acs_hms_base.group_hms_manager'))]"/>
        </record>

        <record model="ir.rule" id="ot_comp_rule">
            <field name="name">Hospital OT multi-company</field>
            <field name="model_id" ref="model_acs_hospital_ot"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>
        <record model="ir.rule" id="bed_comp_rule">
            <field name="name">Bed multi-company</field>
            <field name="model_id" ref="model_hospital_bed"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>
        <record id="acs_hospital_bed_department_rule" model="ir.rule">
            <field name="name">Hospital Bed: Departments</field>
            <field name="model_id" ref="model_hospital_bed"/>
            <field name="domain_force">['|', ('department_id', '=', False), ('department_id', 'in', [dep.id for dep in user.department_ids])]</field>
        </record>
        <record id="acs_hospital_bed_all_rule" model="ir.rule">
            <field name="name">All Beds</field>
            <field name="model_id" ref="model_hospital_bed"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[Command.link(ref('acs_hms_base.group_hms_manager'))]"/>
        </record>

        <record model="ir.rule" id="ward_rule">
            <field name="name">Ward multi-company</field>
            <field name="model_id" ref="model_hospital_ward"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>

        <record id="acs_hospital_ward_department_rule" model="ir.rule">
            <field name="name">Hospital Ward: Departments</field>
            <field name="model_id" ref="model_hospital_ward"/>
            <field name="domain_force">['|', ('department_id', '=', False), ('department_id', 'in', [dep.id for dep in user.department_ids])]</field>
        </record>

        <record id="acs_hospital_ward_all_rule" model="ir.rule">
            <field name="name">All Wards</field>
            <field name="model_id" ref="model_hospital_ward"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[Command.link(ref('acs_hms_base.group_hms_manager'))]"/>
        </record>

    </data>
</odoo>
