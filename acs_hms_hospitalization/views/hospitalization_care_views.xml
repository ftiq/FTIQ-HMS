<?xml version="1.0"?>
<odoo>

    <record id="view_acs_hospitalization_default_service_list" model="ir.ui.view">
        <field name="name">acs.hospitalization.default.service.list</field>
        <field name="model">acs.hospitalization.default.service</field>
        <field name="arch" type="xml">
            <list string="Default Services" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_acs_hospitalization_default_service" model="ir.actions.act_window">
        <field name="name">Default Hospitalization Services</field>
        <field name="path">almightyhms-hospitalization-default-service</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">acs.hospitalization.default.service</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add a Default Hospitalization Service.
            </p>
        </field>
    </record>

    <!--Pre-Ward Checklist-->
    <record model="ir.ui.view" id="ward_check_list_conf_view">
        <field name="name">pre.ward.check.list.template.form</field>
        <field name="model">pre.ward.check.list.template</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" nolabel="0" required="True" string="Ward Check List Item" />
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="ward_check_list_conf_list_view">
        <field name="name">pre.ward.check.list.template.list</field>
        <field name="model">pre.ward.check.list.template</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" nolabel="0" required="True" string="Ward Check List Item" />
            </list>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_ward_check_list_conf_view">
        <field name="name">Pre-Ward Checklist</field>
        <field name="path">almightyhms-pre-ward-checklist</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pre.ward.check.list.template</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add a Pre-Ward Checklist.
            </p>
        </field>
    </record>

    <!--Admission Check List-->
    <record model="ir.ui.view" id="check_list_conf_view12">
        <field name="name">Admission Checklist</field>
        <field name="model">inpatient.checklist.template</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" nolabel="0" required="True" string="Check List Item" />
                            <field name="remark" string="Remarks" />
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="check_list_conf_list_view12">
        <field name="name">Admission Checklist Tree</field>
        <field name="model">inpatient.checklist.template</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" nolabel="0" required="True" string="Check List Item" />
                <field name="remark" string="Remarks" />
            </list>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_check_list_conf_view12">
        <field name="name">Admission Checklist</field>
        <field name="path">almightyhms-admission-checklist</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">inpatient.checklist.template</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="check_list_conf_list_view12" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add an Admission Checklist.
            </p>
        </field>
    </record>

</odoo>