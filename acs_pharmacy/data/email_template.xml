<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="acs_ir_cron_medicine_reminder" model="ir.cron">
            <field name="name">Medicine Reminder</field>
            <field name="model_id" ref="model_account_move"/>
            <field name="state">code</field>
            <field name="code">model.acs_medicine_reminder_cron()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>

        <record id="acs_pharmacy_reminder_mail_template" model="mail.template">
            <field name="name">Medicine Reminder</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="subject">Medicine Reminder</field>
            <field name="email_to">{{object.partner_id.email}}</field>
            <field name="body_html" type="html">
<div>
    <p>
Hello <t t-out="object.partner_id.name"/>,<br/>

This is a gentle reminder from <t t-out="object.company_id.name"/>.

Your medicine(s): 
<strong><t t-out="ctx.get('med_name')"/></strong>
is/are due for refill.

Order Reference: <t t-out="object.name"/><br/>
Please contact us if you need assistance.<br/>
Stay healthy,<br/>
<t t-out="object.company_id.name"/>.
    </p>
</div>
            </field>
        </record>
    </data>
</odoo>