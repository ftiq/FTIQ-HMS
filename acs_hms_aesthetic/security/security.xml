<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="privilege_acs_hms_specialty_aesthetic" model="res.groups.privilege" >
        <field name="name">Aesthetic</field>
        <field name="sequence">1</field>
        <field name="category_id" ref="acs_hms_base.module_category_hms_specialty"/>
    </record>

    <record id="group_hms_aesthetic" model="res.groups">
        <field name="name">User</field>
        <field name="privilege_id" ref="privilege_acs_hms_specialty_aesthetic"/>
        <field name="implied_ids" eval="[Command.link(ref('acs_hms.group_hms_receptionist'))]"/>
        <field name="user_ids" eval="[Command.link(ref('base.user_root')), Command.link(ref('base.user_admin'))]"/>
    </record>

    <data noupdate="1">

        <record id="hms_acs_aesthetic_wish_portal_rule" model="ir.rule">
            <field name="name">Portal Patient's Own Aesthetic Wish</field>
            <field name="model_id" ref="acs_hms_aesthetic.model_acs_aesthetic_patient_wish"/>
            <field name="domain_force">[('patient_id.partner_id','=',user.commercial_partner_id.id)]</field>
            <field name="groups" eval="[Command.link(ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
        </record>

    </data>
</odoo>
