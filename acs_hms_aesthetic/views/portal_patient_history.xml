    <template id="my_aesthetic_history_sign" name="Patient Sign" inherit_id="portal.portal_sidebar" primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <div class="row mt16 o_portal_stock_sidebar">
                <!-- Sidebar -->
                <t t-call="portal.portal_record_sidebar">
                    <t t-set="classes" t-value="'col-lg-auto d-print-none'"/>
                    <t t-set="entries">
                        <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
                            <li class="list-group-item flex-grow-1">
                                <a t-if="patient.ach_has_to_be_signed" role="button" class="btn btn-primary btn-block mb8" data-bs-toggle="modal" data-bs-target="#modalaccept" href="#">
                                    <i class="fa fa-check"/>Accept &amp; Sign
                                </a>
                                <div class="o_download_pdf btn-toolbar flex-sm-nowrap">
                                    <div class="btn-group flex-grow-1 mr-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_download_btn" href="/my/aesthetic/history/sign?report_type=pdf&amp;download=True" title="Download"><i class="fa fa-download"/> Download</a>
                                    </div>
                                    <div class="btn-group flex-grow-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_print_btn o_portal_invoice_print" href="/my/aesthetic/history/sign?report_type=pdf" id="print_invoice_report" title="Print" target="_blank"><i class="fa fa-print"/> Print</a>
                                    </div>
                                </div>
                            </li>
                            <li class="navspy list-group-item pl-0 flex-grow-1" t-ignore="true" role="complementary">
                                <ul class="nav flex-column bs-sidenav"></ul>
                            </li>
                        </ul>
                    </t>
                </t>

                <!-- Page content -->
                <div id="patient_page_content" class="col-12 col-lg justify-content-end">
                    <!-- modal relative to the actions sign -->
                    <div role="dialog" class="modal fade" id="modalaccept">
                        <div class="modal-dialog" t-if="patient">
                            <form id="accept" method="POST" t-att-data-token="patient.access_token" t-att-data-order-id="patient.id" class="js_accept_json modal-content js_website_submit_form">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <header class="modal-header">
                                    <h4 class="modal-title">Accept Details</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">&amp;times;</button>
                                </header>
                                <main class="modal-body" id="sign-dialog">
                                    <p>
                                        <span>By signing this, I agree to the All terms:</span>
                                        <ul>
                                            <li><span>Accepted on the behalf of:</span> <b t-field="patient.partner_id.commercial_partner_id"/></li>
                                        </ul>
                                    </p>
                                    <t t-call="portal.signature_form">
                                        <t t-set="call_url" t-value="patient.get_portal_sign_url()"/>
                                        <t t-set="default_name" t-value="patient.partner_id.name"/>
                                    </t>
                                </main>
                            </form>
                        </div>
                    </div>
                    <!-- status messages -->
                    <div t-if="message == 'sign_ok'" class="alert alert-success alert-dismissable d-print-none" role="status">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">&amp;times;</button>
                        <strong>Thank You!</strong><br/>
                        Your declaration has been signed.
                    </div>
                    <!-- main content -->
                    <div class="card pb-5">
                        <t t-call="acs_hms_aesthetic.my_patient_content"/>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

    
