                                    <div class="col-12">
                                        <a href="#" class="btn btn-primary btn-lg s_website_form_send">Confirm</a>
                                        <span id="s_website_form_result"></span>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </t>
