<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="patient_information_template" inherit_id="acs_hms_base.patient_information_template">
        
        <xpath expr="//tr[@name='patient_gov_phone_tr']" position="after">
            <!-- aesthetic history -->
            <tr name="patient_aesthetic_history_date_null" t-if="aesthetic_history and patient.ach_signed_on">
                <td name="aesthetic_history_date">
                    <strong class="text-center ms-2">Date:</strong> <span t-field="patient.ach_signed_on"/>
                </td>
                <td name="aesthetic_history_null"></td>
            </tr>

            <!-- aesthetic wish -->
            <tr name="patient_aesthetic_wish_physician_date" t-if="aesthetic_wish">
                <td name="aesthetic_wish_physician">
                    <strong class="text-center ms-2">Physician:</strong> <span t-field="aesthetic_wish.physician_id"/>
                </td>
                <td name="aesthetic_wish_date">
                    <strong class="text-center">Date:</strong> <span t-field="aesthetic_wish.date"/>
                </td>
            </tr>
        </xpath>
    </template>

</odoo>
