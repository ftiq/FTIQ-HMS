<odoo>
    <record id="view_acs_medication_report_wizard" model="ir.ui.view">
        <field name="name">acs.medication.report.wiz.form</field>
        <field name="model">acs.medication.report.wiz</field>
        <field name="arch" type="xml">
            <form string="Split Record">
                <group>
                    <group>
                        <field name="patient_id"/>
                        <field name="start_date" placeholder="Optional"/>
                    </group>
                    <group>
                        <field name="hospitalization_id" domain="[('patient_id', '=', patient_id)]" readonly="context.medication_hospitalization"/>
                        <field name="end_date" placeholder="Optional"/>
                    </group>
                </group>
                <footer>
                    <button string="Print Report" name="action_print_report" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel" class="btn btn-secondary"/>
                </footer>
           </form>
        </field>
    </record>

    <record id="action_acs_medication_report_wizard" model="ir.actions.act_window">
        <field name="name">Medication Report</field>
        <field name="res_model">acs.medication.report.wiz</field>
        <field name="binding_model_id" ref="acs_hms_hospitalization.model_acs_hospitalization"/>
        <field name="view_id" ref="view_acs_medication_report_wizard"/>
        <field name="target">new</field>
        <field name="context">{'medication_hospitalization': True}</field>
    </record>

    <record id="action_acs_medication_report_wizard_patient" model="ir.actions.act_window">
        <field name="name">Medication Report</field>
        <field name="res_model">acs.medication.report.wiz</field>
        <field name="binding_model_id" ref="acs_hms_base.model_hms_patient"/>
        <field name="view_id" ref="view_acs_medication_report_wizard"/>
        <field name="target">new</field>
        <field name="context">{'medication_hospitalization': False}</field>
    </record>
</odoo>