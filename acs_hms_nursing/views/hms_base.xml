<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hms_prescription_order_form" model="ir.ui.view">
        <field name="name">prescription.order.form.inherit</field>
        <field name="model">prescription.order</field>
        <field name="inherit_id" ref="acs_hms_hospitalization.acs_outpatient_prescription_view_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="object" name="action_patient_medication" icon="fa-wpforms">
                    <field string="Medication" name="patient_medication_count" widget="statinfo" />
                </button>
            </div>
            <field name="hospitalization_id" position="before">
                <button name="create_medication_plan" string="+ Create Medication Plan" colspan="2" class="oe_link" type="object" invisible="state!='prescription' or patient_medication_ids or not hospitalization_id" groups="acs_hms.group_hms_jr_doctor"/>
            </field>
        </field>
    </record>
    
    <record id="view_medicament_dosage_form" model="ir.ui.view">
        <field name="name">medicament.dosage.form.inherit</field>
        <field name="model">medicament.dosage</field>
        <field name="inherit_id" ref="acs_hms.view_medicament_dosage_form"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="acs_medication_time_ids" widget="many2many_tags" options="{'no_create': True}"/>
            </field>
        </field>
    </record>

    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">hms.patient.form.inherit</field>
        <field name="model">hms.patient</field>
        <field name="inherit_id" ref="acs_hms_base.view_patient_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="object" name="action_patient_medication" icon="fa-wpforms">
                    <field string="Medication" name="patient_medication_count" widget="statinfo" />
                </button>
            </div>
        </field>
    </record>

    <record id="view_acs_hospitalization_form_nursing" model="ir.ui.view">
        <field name="name">acs.hospitalization.form.inherit</field>
        <field name="model">acs.hospitalization</field>
        <field name="inherit_id" ref="acs_hms_hospitalization.view_acs_hospitalization_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_wardrounds" icon="fa-bed">
                    <field string="Ward Round" name="ward_round_count" widget="statinfo" />
                </button>
                <button class="oe_stat_button" type="object" name="action_patient_medication" icon="fa-wpforms">
                    <field string="Medication" name="patient_medication_count" widget="statinfo" />
                </button>
            </div>
            <group name="physician_ward_rounds" position="before">
                <button name="create_medication_plan" string="+ Create Medication Plan" class="oe_link" type="object" invisible="state!='hosp'" groups="acs_hms.group_hms_jr_doctor"/>
                <separator string="Nurse Ward Rounds"/>
                <field name="ward_round_ids" context="{'default_hospitalization_id': id,'default_patient_id': patient_id}"/>
            </group>
        </field>
    </record>

    <record id="view_employee_form" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <field name="job_id" position="after">   
                <field name="ward_round_product_id"/>
            </field>
        </field>
    </record>

    <!-- Nurse:Employee -->
    <record id="hr_employee_public_action" model="ir.actions.act_window">
        <field name="name">Nurse</field>
        <field name="path">almightyhms-nurse</field>
        <field name="res_model">hr.employee.public</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('department_id.department_type','=','nurse')]</field>
        <field name="context">{}</field>
        <field name="view_id" eval="False"/>
        <field name="search_view_id" ref="hr.hr_employee_public_view_search"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Add a new Nurse (employee)
          </p><p>
            With just a quick glance on the Odoo employee screen, you
            can easily find all the information you need for each person;
            contact data, job position, availability, etc.
          </p>
        </field>
    </record>

</odoo>