<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="base.user_root" model="res.users">
        <field name="department_ids" eval="[Command.link(ref('acs_hms.nursing_department'))]"/>
    </record>

    <record id="base.user_admin" model="res.users">
        <field name="department_ids" eval="[Command.link(ref('acs_hms.nursing_department'))]"/>
    </record>

    <data noupdate="1">
        <record id="sequence_round_number" model="ir.sequence">
            <field name="name">ACS Nurse Ward Round</field>
            <field name="code">acs.nurse.ward.round</field>
            <field name="active">TRUE</field>
            <field name="prefix">RN</field>
            <field name="padding">4</field>
            <field name="acs_auto_create" eval="True"/>
        </record>

        <record id="sequence_acs_patient_medication" model="ir.sequence">
            <field name="name">ACS Patient Medication</field>
            <field name="code">acs.patient.medication</field>
            <field name="active">TRUE</field>
            <field name="prefix">PME/%(y)s/%(month)s/%(day)s/</field>
            <field name="padding">5</field>
            <field name="acs_auto_create" eval="True"/>
        </record>
        
    </data>

</odoo>