<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_acs_block_slots_form" model="ir.ui.view">
        <field name="name">Block Slots</field>
        <field name="model">acs.block.slots.wizard</field>
        <field name="arch" type="xml">
            <form string="Scheduler Wizard">
                <group>
                    <group name="acs_left">
                        <field name="schedule_id"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="type"/>
                    </group>
                    <group name="acs_right">
                        <field name="user_ids" widget="many2many_tags"/>
                    </group>
                </group>
               <footer>
                    <button name="acs_block_slots" string="Block Slots" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="acs_block_slots_action" model="ir.actions.act_window">
        <field name="name">Block Slots</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">acs.block.slots.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>