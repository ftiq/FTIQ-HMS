<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.module.category" id="website_booking_category">
        <field name="name">Website Booking</field>
        <field name="sequence">11</field>
    </record>

    <record id="privilege_acs_website_booking" model="res.groups.privilege" >
        <field name="name">Website Booking</field>
        <field name="sequence">1</field>
        <field name="category_id" ref="website_booking_category"/>
    </record>

    <record id="group_booking_user" model="res.groups">
        <field name="name">User</field>
        <field name="privilege_id" ref="privilege_acs_website_booking"/>
    </record>

    <record id="group_booking_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="privilege_id" ref="privilege_acs_website_booking"/>
        <field name="user_ids" eval="[Command.link(ref('base.user_root')), Command.link(ref('base.user_admin'))]"/>
        <field name="implied_ids" eval="[Command.link(ref('acs_website_booking.group_booking_user'))]"/>
    </record>

    <!--Record Rules -->
    <record id="acs_schedule_comp_rule" model="ir.rule">
        <field name="name">Schedule Multi-Company</field>
        <field name="model_id" ref="acs_website_booking.model_acs_schedule"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>

    <record id="acs_schedule_slot_lines_comp_rule" model="ir.rule">
        <field name="name">Schedule Slot Lines Multi-Company</field>
        <field name="model_id" ref="acs_website_booking.model_acs_schedule_slot_lines"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>

    <record id="acs_schedule_slot_comp_rule" model="ir.rule">
        <field name="name">Schedule Slot Multi-Company</field>
        <field name="model_id" ref="acs_website_booking.model_acs_schedule_slot"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>

    <record id="acs_schedule_user_rule" model="ir.rule">
        <field name="name">Schedule User</field>
        <field name="model_id" ref="acs_website_booking.model_acs_schedule"/>
        <field name="domain_force">[('user_ids','in',[user.id])]</field>
        <field name="groups" eval="[Command.link(ref('acs_website_booking.group_booking_user'))]"/>
    </record>

    <record id="acs_schedule_slot_user_rule" model="ir.rule">
        <field name="name">Schedule Slot User</field>
        <field name="model_id" ref="acs_website_booking.model_acs_schedule_slot"/>
        <field name="domain_force">[('acs_schedule_id.user_ids','in',[user.id])]</field>
        <field name="groups" eval="[Command.link(ref('acs_website_booking.group_booking_user'))]"/>
    </record>

    <record id="acs_schedule_slot_lines_user_rule" model="ir.rule">
        <field name="name">Schedule Slot Lines User</field>
        <field name="model_id" ref="acs_website_booking.model_acs_schedule_slot_lines"/>
        <field name="domain_force">[('user_id','=',user.id)]</field>
        <field name="groups" eval="[Command.link(ref('acs_website_booking.group_booking_user'))]"/>
    </record>

    <record id="acs_schedule_manager_rule" model="ir.rule">
        <field name="name">Schedule Manager</field>
        <field name="model_id" ref="acs_website_booking.model_acs_schedule"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[Command.link(ref('acs_website_booking.group_booking_manager'))]"/>
    </record>

    <record id="acs_schedule_slot_manager_rule" model="ir.rule">
        <field name="name">Manager: Schedule Slot</field>
        <field name="model_id" ref="acs_website_booking.model_acs_schedule_slot"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[Command.link(ref('acs_website_booking.group_booking_manager'))]"/>
    </record>

    <record id="acs_schedule_slot_line_manager_rule" model="ir.rule">
        <field name="name">Manager: Schedule Slot line</field>
        <field name="model_id" ref="acs_website_booking.model_acs_schedule_slot_lines"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[Command.link(ref('acs_website_booking.group_booking_manager'))]"/>
    </record>

    <!-- For portal User -->
        <record id="acs_appointment_schedule_slot_portal_rule" model="ir.rule">
            <field name="name">Portal: Schedule Slot</field>
            <field name="model_id" ref="acs_website_booking.model_acs_schedule_slot"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[Command.link(ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
        </record>

        <record id="acs_appointment_schedule_slot_lines_portal_rule" model="ir.rule">
            <field name="name">Portal: Schedule Slot Lines</field>
            <field name="model_id" ref="acs_website_booking.model_acs_schedule_slot_lines"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[Command.link(ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
        </record>

</odoo>
