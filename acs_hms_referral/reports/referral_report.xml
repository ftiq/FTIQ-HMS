<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="patient_information_template" inherit_id="acs_hms_base.patient_information_template">
        <xpath expr="//tr[@name='patient_gov_phone_tr']" position="after">
            <tr name="referral_dob_type" t-if="referral">
                <td name="referral_dob">
                    <strong class="text-center ms-2">Patient DOB:</strong> <span t-field="referral.patient_dob"/>
                </td>
                <td name="referral_type">
                    <strong class="text-center">Referral Type:</strong> <span t-esc="referral.referral_type"/>
                </td>
            </tr>
            <tr name="referral_referring_referred_physician" t-if="referral">
                <td name="referral_referring">
                    <strong class="text-center ms-2">Referring By:</strong> <span t-field="referral.referring_partner_id.name"/>
                </td>
                <td name="referral_referred_physician">
                    <strong class="text-center">Referred physician:</strong> <span t-esc="referral.referred_physician_id.name"/>
                </td>
            </tr>
            <tr name="referral_date_null" t-if="referral">
                <td name="referral_date">
                    <strong class="text-center ms-2">Referred Date:</strong> <span t-field="referral.referred_date"/>
                </td>
                <td name="referral_null"></td>
            </tr>
            <tr name="referral_description" t-if="referral">
                <td colspan="2" name="referral_date">
                    <strong class="text-center ms-2">Description:</strong> <span t-field="referral.description"/>
                </td>
            </tr>
        </xpath>
    </template>

    <template id="report_acs_referral_detail_document">
        <t t-call="web.external_layout">
            <div class="page">
                <div class="oe_structure"/>

                <div class="text-center mt16 mb16">
                    <h2>
                        <strong>
                            Referral: <span t-field="doc.name"/>
                        </strong>
                    </h2>
                </div>

                <t t-call="acs_hms_base.patient_information_template">
                    <t t-set="patient" t-value="doc.patient_id"/>
                    <t t-set="referral" t-value="doc"/>
                </t>

            </div>
        </t>
    </template>

    <template id="report_acs_referral_detail">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="acs_hms_referral.report_acs_referral_detail_document"/>
            </t>
        </t>
    </template>

    <record id="action_acs_referral_report" model="ir.actions.report">
        <field name="name">Referral</field>
        <field name="model">hms.referral</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">acs_hms_referral.report_acs_referral_detail</field>
        <field name="report_file">acs_hms_referral.report_acs_referral_detail</field>
        <field name="binding_model_id" ref="acs_hms_referral.model_hms_referral"/>
        <field name="binding_type">report</field>
    </record>

</odoo>