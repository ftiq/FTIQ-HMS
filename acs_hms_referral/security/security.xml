<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="acs_hms_referral_privilege" model="res.groups.privilege" >
        <field name="name">Referral</field>
        <field name="category_id" ref="acs_hms_base.module_category_hms"/>
    </record>

    <record id="group_hms_referral_user" model="res.groups">
        <field name="name">User</field>
        <field name="privilege_id" ref="acs_hms_referral.acs_hms_referral_privilege"/>
    </record>

    <record id="group_hms_referral_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="privilege_id" ref="acs_hms_referral.acs_hms_referral_privilege"/>
        <field name="implied_ids" eval="[Command.link(ref('acs_hms_referral.group_hms_referral_user'))]"/>
        <field name="user_ids" eval="[Command.link(ref('base.user_root')), Command.link(ref('base.user_admin'))]"/>
    </record>

    <record id="referral_portal_rule" model="ir.rule">
        <field name="name">Portal: Own Referral Forms</field>
        <field name="model_id" ref="model_hms_referral"/>
        <field name="domain_force">[('referring_partner_id','=',user.commercial_partner_id.id)]</field>
        <field name="groups" eval="[Command.link(ref('base.group_portal'))]"/>
        <field name="perm_unlink" eval="False"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
    </record>

</odoo>