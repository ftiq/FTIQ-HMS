<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="seq_hms_referral" model="ir.sequence">
            <field name="name">HMS Referral</field>
            <field name="code">hms.referral</field>
            <field name="prefix">REF</field>
            <field name="padding">3</field>
            <field name="acs_auto_create" eval="True"/>
            <field name="company_id" eval="False"/>
        </record>

        <record id="ir_cron_close_referral_action" model="ir.cron">
            <field name="name">Close Referral</field>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="model_id" ref="acs_hms_referral.model_hms_referral"/>
            <field name="state">code</field>
            <field name="code">model.acs_close_referrals()</field>
        </record>

    </data>
    
</odoo>