<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">hms.patient.form</field>
        <field name="model">hms.patient</field>
        <field name="inherit_id" ref="acs_hms_base.view_patient_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='phone']" position="after">
                <field name="acs_otp_sms" invisible="verified_phone_sms or not generated_otp_sms" groups="acs_sms.group_sms_otp"/>
                <div class="o_row" colspan="2" invisible="verified_phone_sms" groups="acs_sms.group_sms_otp">
                    <button name="action_send_otp_sms" string="Send OTP" type="object" class="oe_inline fa fa-arrow-up oe_link"/>
                    <button name="action_verify_otp_sms" string="Verify OTP" type="object" class="oe_inline fa fa-phone oe_link"/>
                </div>
                <field name="verified_phone_sms" readonly="1" groups="acs_sms.group_sms_otp" invisible="not verified_phone_sms"/>
                <field name="verified_phone_sms" invisible="1"/>
                <field name="generated_otp_sms" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>