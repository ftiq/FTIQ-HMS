<?xml version="1.0"?>
<odoo>

    <!--Tooth-->
    <record id="acs_acs_hms_tooth_form_inherit" model="ir.ui.view">
        <field name="name">acs.hms.tooth.form</field>
        <field name="model">acs.hms.tooth</field>
        <field name="inherit_id" ref="acs_hms_dental.acs_acs_hms_tooth_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="before">
                <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image'}"/>
            </xpath>
            <xpath expr="//field[@name='quadrant']" position="after">
                <field name="is_child_tooth" string="Child Tooth"/>
                <field name="is_teen_tooth" string="Teenager Tooth"/>
                <field name="is_adult_tooth" string="Adult Tooth"/>
            </xpath>
        </field>
    </record>

    <record id="acs_acs_hms_tooth_tree_inherit" model="ir.ui.view">
        <field name="name">acs.hms.tooth.form</field>
        <field name="model">acs.hms.tooth</field>
        <field name="inherit_id" ref="acs_hms_dental.acs_hms_tooth_list"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='fdi_code']" position="after">
                <field name="is_child_tooth" widget="boolean_toggle"/>
                <field name="is_teen_tooth" widget="boolean_toggle"/>
                <field name="is_adult_tooth" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>

</odoo>