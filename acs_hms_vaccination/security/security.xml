<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="privilege_acs_hms_department_vaccination" model="res.groups.privilege" >
        <field name="name">Vaccination</field>
        <field name="sequence">16</field>
        <field name="category_id" ref="acs_hms_base.module_category_hms"/>
    </record>

    <record id="group_hms_vaccination" model="res.groups">
        <field name="name">User</field>
        <field name="privilege_id" ref="privilege_acs_hms_department_vaccination"/>
        <field name="implied_ids" eval="[Command.link(ref('acs_hms_base.group_hms_user'))]"/>
        <field name="user_ids" eval="[Command.link(ref('base.user_root')), Command.link(ref('base.user_admin'))]"/>
    </record>

    <data noupdate="1">

        <record id="ward_rule" model="ir.rule">
            <field name="name">Vaccination multi-company</field>
            <field name="model_id" ref="model_acs_vaccination"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>

    </data>
    
</odoo>
