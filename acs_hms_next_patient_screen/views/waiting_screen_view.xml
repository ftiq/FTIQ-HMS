<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="macs_hms_waiting_screen_kanban" model="ir.ui.view">
        <field name="name">acs.hms.waiting.screen.kanban</field>
        <field name="model">acs.hms.waiting.screen</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="card" class="flex-row">
                        <main class="ps-2 ps-md-0">
                            <div class="mb-2" name="name">
                                <field name="name"  class="mb-0 fw-bold fs-5"/> 
                                <t t-if="record.code.raw_value"  class="mb-0 fw-bold fs-5">
                                    [<field name="code"/>]
                                </t>
                            </div>
                            <span class="oe_kanban_list_many2many mb-2" invisible="not physician_ids">
                                <field name="physician_ids" widget="many2many_tags"/>
                            </span>
                            <div class="mb-2">
                                <span class="me-1 fw-bold">Model: </span><field name="res_model_id"/>
                            </div>
                            <div class="mb-2">
                                <span class="me-1 fw-bold">Records: </span><field name="acs_number_of_records"/><br/>
                                <span class="me-1 fw-bold">Refresh Time (sec): </span><field name="acs_refresh_time"/>
                            </div>
                            <div>
                                <span class="badge bg-secondary text-success me-1 rounded-pill" invisible="not acs_show_video">
                                    <i class="fa fa-video-camera" title="Video Enabled"/>
                                </span>
                                <span class="badge bg-secondary me-1 rounded-pill" invisible="acs_show_video">
                                    <i class="fa fa-video-camera text-danger " title="Video Disabled"/>
                                </span>
                                <span class="badge bg-secondary text-success me-1 rounded-pill" invisible="not show_patient_name_image">
                                    <i class="fa fa-image" title="Patient Image Enabled"/>
                                </span>
                                <span class="badge bg-secondary me-1 rounded-pill" invisible="show_patient_name_image">
                                    <i class="fa fa-image text-danger " title="Patient Image Disabled"/>
                                </span>
                                <span class="badge bg-secondary text-success me-1 rounded-pill" invisible="not show_cabin">
                                    <i class="fa fa-building" title="Cabin no Enabled"/>
                                </span>
                                <span class="badge bg-secondary me-1 rounded-pill" invisible="show_cabin">
                                    <i class="fa fa-building text-danger" title="Cabin no Disabled"/>
                                </span>
                                <span class="badge bg-secondary text-success me-1 rounded-pill" invisible="not acs_show_date_time">
                                    <i class="fa fa-calendar" title="Date-Time Enabled"/>
                                </span>
                                <span class="badge bg-secondary me-1 rounded-pill" invisible="acs_show_date_time">
                                    <i class="fa fa-calendar text-danger" title="Date-Time Disabled"/>
                                </span>
                            </div>
                        </main>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="acs_hms_waiting_screen_list" model="ir.ui.view">
        <field name="name">acs.hms.waiting.screen.list</field>
        <field name="model">acs.hms.waiting.screen</field>
        <field name="arch" type="xml">
            <list string="Waiting Screen">
                <field name="name"/>
                <field name="code"/>
                <field name="physician_ids"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <record id="acs_hms_waiting_screen_form" model="ir.ui.view">
        <field name="name">acs.hms.waiting.screen.form</field>
        <field name="model">acs.hms.waiting.screen</field>
        <field name="arch" type="xml">
            <form string="Waiting Screen">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" default_focus="1" placeholder="Screen Name" required="True"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="physician_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                            <field name="res_model_id" domain="[('field_id.name','in',['acs_show_in_wc'])]"/>
                            <field name="acs_show_video"/>
                            <field name="acs_youtube_video_url" placeholder="https://www.youtube.com/watch?v=XXXX" invisible="not acs_show_video"/>
                            <field name="acs_show_date_time"/>
                            <label for="acs_screen_url"/>
                            <div>
                                <field name="acs_screen_url" widget="CopyClipboardChar"/>
                                <button name="acs_open_website_url" type="object" class="btn btn-link ps-0">
                                    <span class="fa fa-desktop"></span><span> Open Screen</span>
                                </button>
                                <button name="reset_access_token" type="object" class="btn btn-link ps-0">
                                    <span class="fa fa-refresh"></span><span> Reset Token</span>
                                </button>
                            </div>
                        </group>
                        <group>
                            <field name="acs_refresh_time" required="1"/>
                            <field name="acs_number_of_records" required="1"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                            <field name="show_patient_name_image" />
                            <field name="show_cabin"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Other Information" groups="base.group_no_one">
                            <group>
                                <group>
                                    <field name="acs_patient_field_id"/>
                                </group>
                                <group>
                                    <field name="acs_physician_field_id"/>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="acs_cabin_field_id" invisible="not show_cabin" required="show_cabin"/>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="acs_states_to_include"/>
                                    <field name="acs_state_field_id"/>
                                </group>
                                <group>
                                    <field name="in_progress_state"/>
                                    <field name="in_progress_color" widget="color" invisible="not in_progress_state"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_acs_hms_waiting_screen" model="ir.actions.act_window">
        <field name="name">Waiting Screen</field>
        <field name="path">almightyhms-waiting-screen</field>
        <field name="res_model">acs.hms.waiting.screen</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add new waiting screen.
            </p>
        </field>
    </record>

    <menuitem id="main_menu_hms_waiting_screen" name="Waiting Screen" sequence="200" web_icon="acs_hms_next_patient_screen,static/description/icon.png" groups="acs_hms.group_hms_receptionist"/>

    <menuitem id="menu_hms_waiting_screen" name="Waiting Screen" parent="main_menu_hms_waiting_screen" sequence="0" groups="acs_hms_next_patient_screen.group_waiting_screen" action="action_acs_hms_waiting_screen"/>

</odoo>