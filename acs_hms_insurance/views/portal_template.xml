<odoo>

    <!-- Portal View -->
    <template id="portal_my_home_menu_hms" name="Portal layout : HMS Data" inherit_id="portal.portal_breadcrumbs" priority="20">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'insurance_claim' or insurance_claim" t-attf-class="breadcrumb-item #{'active ' if not insurance_claims else ''}">
                <a t-if="insurance_claim" t-attf-href="/my/insuranceclaims?{{ keep_query() }}">Insurance Claims</a>
                <t t-else="">Insurance Claims</t>
            </li>
            <li t-if="insurance_claim" class="breadcrumb-item active">
                <t t-esc="insurance_claim.name"/>
            </li>
        </xpath>
    </template>

    <template id="portal_my_home" name="Insurance Claims - Portal My Home" inherit_id="portal.portal_my_home" priority="30" customize_show="True">
        <div id="portal_client_category" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/acs_hms_insurance/static/description/insurance.png'"/>
                <t t-set="title">Insurance Claims</t>
                <t t-set="url" t-value="'/my/insuranceclaims'"/>
                <t t-set="text">Review all your Insurance Claims</t>
                <t t-set="placeholder_count" t-value="'insurance_claim_count'"/>
            </t>
        </div>
    </template>

    <template id="insurance_claims" name="My Insurance Claims">
        <t t-call="portal.portal_layout">

            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Insurance Claims</t>
            </t>
            <t t-if="not insurance_claims">
                <p>There are currently no Insurance Claims for your account.</p>
            </t>

            <div t-if="insurance_claims" class="panel panel-default">
                <div class="table-responsive">
                    <table class="table table-hover bg-white status_table o_portal_my_doc_table">
                        <thead>
                            <tr class="active">
                                <th>Name</th>
                                <th>Insurance Company</th>
                                <th>Insurance Policy</th>
                                <th>Date</th>
                                <th>Reference</th>
                                <th>State</th>
                                <th t-if="insurance_claims and insurance_claims[0].acs_insurance_claim_sign">Patient Sign</th>
                                <th></th>
                            </tr>
                        </thead>

                        <t t-foreach="insurance_claims" t-as="claim">
                            <tr>
                                <td>
                                    <a t-attf-href="/my/insuranceclaims/#{claim.id}?{{ keep_query() }}"><t t-esc="claim.name"/></a>
                                </td>
                                <td>
                                    <span t-field="claim.insurance_company_id"/>
                                </td>
                                <td>
                                    <span t-field="claim.insurance_id"/>
                                </td>
                                <td>
                                    <span t-field="claim.date"/>
                                </td>
                                <td>
                                    <t t-if="claim.claim_for=='appointment'">
                                        <span t-field="claim.appointment_id"/>
                                    </t>
                                    <t t-if="claim.claim_for=='hospitalization'">
                                        <span t-field="claim.hospitalization_id"/>
                                    </t>
                                </td>
                                <td>
                                    <span t-field="claim.state"/>
                                </td>
                                <td t-if="claim.acs_insurance_claim_sign">
                                    <t t-if="not claim.patient_has_to_sign">
                                        <span>Done</span>
                                    </t>
                                    <t t-else="">
                                        <span>Pending</span>
                                    </t>
                                </td>
                                <td>
                                    <a class="btn btn-primary" target="_blank" title="Lab Report"
                                        t-att-href="'/report/pdf/acs_hms_insurance.claim_report/'+str(claim.id)">Print</a>
                                </td>
                            </tr>
                        </t>
                    </table>
                </div>
            </div>
            <div t-if="pager" class="o_portal_pager text-center">
                <t t-call="portal.pager"/>
            </div>
        </t>
    </template>

    <template id="my_insurance_claim" name="Insurance Claim" >
        <t t-call="portal.portal_layout">
            <!-- Page Content -->
            <div id="claim_content" class="row mt32">
                <!-- <div t-if="insurance_claim.doc_ids" class="mt-4">
                    <h2>Related Documents</h2>
                    <div class="table-responsive">
                        <table class="table table-hover bg-white status_table o_portal_my_doc_table">
                            <thead>
                                <tr class="active">
                                    <th>Document</th>
                                    <th>Name</th>
                                    <th class="col-md-8">Description</th>
                                </tr>
                            </thead>

                            <t t-foreach="insurance_claim.doc_ids" t-as="document">
                                <tr>
                                    <td>Document <t t-esc="document.id"/></td>
                                    <td>
                                        <div>
                                          <a t-att-href="'/web/content?model=ir.attachment&amp;field=datas&amp;id=%s&amp;download=true&amp;filename_field=name' % document.id"><span class="fa fa-download"/><span t-field="document.name"/></a>
                                        </div>
                                    </td>
                                    <td><span t-field="document.description"/></td>
                                </tr>
                            </t>
                        </table>
                    </div>
                </div> -->

                <div class="col-12 col-md-3 mb-3 align-self-start" t-if="insurance_claim.acs_insurance_claim_sign and insurance_claim.patient_has_to_sign and not insurance_claim.patient_signature">
                    <t t-if="insurance_claim.patient_has_to_sign and not insurance_claim.patient_signature">
                        <a role="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalaccept">Accept &amp; Sign</a>
                    </t>
                </div>

                <div t-attf-class="col-12 col-md-#{'9' if insurance_claim.acs_insurance_claim_sign and insurance_claim.patient_has_to_sign and not insurance_claim.patient_signature else '12'}">
                    <div class="o_portal_html_view shadow p-3" style="background-color: white;">
                        <t t-call="acs_hms_insurance.claim_report_document" t-lang="insurance_claim.patient_id.partner_id.lang">
                            <t t-set="doc" t-value="insurance_claim.sudo()"/>
                        </t>
                    </div>
                    <!-- chatter -->
                    <div id="claim_communication" class="mt-4">
                        <h2>History</h2>
                        <t t-call="portal.message_thread">
                            <t t-set="object" t-value="insurance_claim"/>
                        </t>
                    </div>
                </div>

                <div role="dialog" class="modal fade" id="modalaccept">
                    <div class="modal-dialog">
                        <form id="accept_claim_form" method="POST" class="js_accept_json modal-content p-4">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <input type="hidden" name="claim_id" t-att-value="insurance_claim.id"/>
                            <header class="modal-header">
                                <h4 class="modal-title">Accept Claim</h4>
                                <button type="button" class="close" data-bs-dismiss="modal">&#215;</button>
                            </header>
                            <main class="modal-body" id="sign-dialog">
                                <p>By signing this, I agree to all the terms.</p>
                                <ul>
                                    <li>Accepted on behalf of:
                                        <b t-field="insurance_claim.patient_id.partner_id.commercial_partner_id"/>
                                    </li>
                                </ul>
                                <t t-call="portal.signature_form">
                                    <t t-set="call_url" t-value="'/my/claim/%d/accept' % insurance_claim.id"/>
                                    <t t-set="default_name" t-value="insurance_claim.patient_id.name"/>
                                </t>
                            </main>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>