<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_acs_scheduler_wizard" model="ir.ui.view">
        <field name="name">acs.scheduler.wizard.form.inherit</field>
        <field name="model">acs.scheduler.wizard</field>
        <field name="inherit_id" ref="acs_website_booking.view_acs_scheduler_wizard"/>
        <field name="arch" type="xml">
            <group name="acs_right" position="after">
                <group>
                    <field name="physician_ids" widget="many2many_tags"/>
                </group>
                <group>
                    <field name="department_id" options="{'no_open': True, 'no_create': True}"/>
                </group>
            </group>
        </field>
    </record>

    <record id="view_acs_block_slots_form" model="ir.ui.view">
        <field name="name">acs.block.slots.wizard.form.inherit</field>
        <field name="model">acs.block.slots.wizard</field>
        <field name="inherit_id" ref="acs_website_booking.view_acs_block_slots_form"/>
        <field name="arch" type="xml">
            <field name="user_ids" position="after">
                <field name="physician_ids" widget="many2many_tags"/>
                <field name="department_id" options="{'no_open': True, 'no_create': True}"/>
            </field>
        </field>
    </record>

</odoo>