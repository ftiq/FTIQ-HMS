<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="account_invoice_summary_report_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})"/>
            <div class="page">
                <div class="oe_structure"/>

                <table class="table table-bordered">
                    <tr>
                        <td style="text-align:center">
                            <strong style="font-size: 20px;">
                                <span>Summary Invoice: </span>
                                <span t-field="doc.name"/>
                            </strong>
                        </td>
                    </tr>
                </table>

                <div class="row">
                    <div class="col-6" name="date">
                        <strong>Date: </strong> <span t-field="doc.invoice_date"/>
                    </div>
                    <div class="col-6" name="partner">
                        <strong>Partner: </strong> <span t-field="doc.partner_id"/>
                    </div>
                </div>

                <table class="table table-sm o_main_table mt16">
                    <thead>
                        <tr class="active">
                            <th>
                                <strong>Description</strong>
                            </th>
                            <th class="text-right price_tax_included">
                                <strong>Total Price</strong>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="doc.action_print_customer_invoice()" t-as="line" t-att-class="'bg-200 font-weight-bold o_line_section'">
                            <td>
                                <span t-esc="line['product_category']"/>
                            </td>
                            <td class="text-center">
                                <span t-esc="line['acs_categ_total']"
                                    t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="clearfix">
                    <div class="row" name="total">
                        <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ms-auto">
                            <table class="table table-sm;page-break-inside: avoid;">
                                <t t-if="doc.amount_tax > 0">
                                    <tr class="border-black o_subtotal"> 
                                        <td><strong>Subtotal</strong></td>
                                        <td class="text-right">
                                            <span t-field="doc.amount_untaxed"
                                                t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="doc.amount_tax > 0">
                                    <tr class="border-black">
                                        <td><strong>Taxes</strong></td>
                                        <td class="text-right">
                                            <span t-field="doc.amount_tax"
                                                t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                        </td>
                                    </tr>
                                </t>
                                <tr class="border-black">
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                        <span t-field="doc.amount_total"
                                            t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <p class="mt32">
                    Keep this print as reference further communication and procedure.
                    Should you have any questions please contact us at your convenience.<br/><br/>
                    Best regards,<br/>
                </p>
                <div class="row" name="total">
                    <div class="col-4 pull-right">
                        <span class="col-6 pull-left"><strong>Responsible:</strong></span>
                        <span class="col-6 pull-right"><strong>Date:</strong></span><br/>
                        <span/><br/>
                        <span/><br/>
                        <div style="border-top: 1px solid black;">Print Name and Sign</div><br/>
                    </div>
                </div>
                
                <div class="oe_structure"/>
                <p style="page-break-before:always;"> </p>
            </div>
        </t>
    </template>

    <template id="account_invoice_summary_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="acs_invoice_summary.account_invoice_summary_report_document"/>
            </t>
        </t>
    </template>

    <record id="account_invoice_summary_report_inherit" model="ir.actions.report">
        <field name="name">Invoice Summary</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">acs_invoice_summary.account_invoice_summary_report</field>
        <field name="report_file">acs_invoice_summary.account_invoice_summary_report</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
    </record>
</odoo>