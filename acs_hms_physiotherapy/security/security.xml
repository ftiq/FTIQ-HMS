            <field name="sequence">1</field>
            <field name="category_id" ref="acs_hms_base.module_category_hms_specialty"/>
        </record>

        <record id="group_hms_physiotherapy" model="res.groups">
            <field name="name">User</field>
            <field name="privilege_id" ref="privilege_acs_hms_specialty_physiotherapy"/>
            <field name="implied_ids" eval="[Command.link(ref('acs_hms_base.group_hms_user'))]"/>
            <field name="user_ids" eval="[Command.link(ref('base.user_root')), Command.link(ref('base.user_admin'))]"/>
        </record>

    </data>
    <data noupdate="1">

        <record id="physio_comp_rule" model="ir.rule">
            <field name="name">Physiotherapy multi-company</field>
            <field name="model_id" ref="model_acs_physiotherapy"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>

    </data>
