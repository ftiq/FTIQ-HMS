<?xml version="1.0"?>
<odoo>

    <record id="acs_physiotherapy_exercise_group_form" model="ir.ui.view">
        <field name="name">Exercise Group</field>
        <field name="model">physiotherapy.exercise.group</field>
        <field name="arch" type="xml">
            <form string="Exercise Group Master">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <group>
                            <field name="product_id" context="{'default_type':'service','default_hospital_product_type':'physiotherapy_procedure'}" domain="[('type','=','service'),('hospital_product_type','=','physiotherapy_procedure')]"/>
                        </group>
                    </group>
                    <field name="exercise_ids" colspan="4" nolabel="1">
                        <list editable="bottom" string="Exercise Name">
                            <field name="name" required="1"/>
                        </list>
                    </field>
                    <field name="description" placeholder="Description"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="acs_physiotherapy_exercise_group_list" model="ir.ui.view">
        <field name="name">Exercise Group Master list</field>
        <field name="model">physiotherapy.exercise.group</field>
        <field name="arch" type="xml">
            <list string="Exercise Group Master">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="acs_action_physiotherapy_exercise_group" model="ir.actions.act_window">
        <field name="name">Exercise Group Master</field>
        <field name="path">almightyhms-physiotherapy-exercise-group</field>
        <field name="res_model">physiotherapy.exercise.group</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add new record.
            </p>
        </field>
    </record>

    <record id="acs_physiotherapy_note_template_list" model="ir.ui.view">
        <field name="name">Physiotherapy NoteTemplate List</field>
        <field name="model">acs.physiotherapy.note.template</field>
        <field name="arch" type="xml">
            <list string="Physiotherapy Note Template">
                <field name="name"/>
                <field name="right_val"/>
                <field name="left_val"/>
                <field name="sensory_val"/>
                <field name="note_type"/>
            </list>
        </field>
    </record>

    <record id="acs_physiotherapy_note_template_form" model="ir.ui.view">
        <field name="name">Physiotherapy Note Template Form</field>
        <field name="model">acs.physiotherapy.note.template</field>
        <field name="arch" type="xml">
            <form string="Physiotherapy Note Template">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="right_val"/>
                        <field name="left_val"/>
                        <field name="sensory_val"/>
                        <field name="note_type"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="acs_action_physiotherapy_note_template" model="ir.actions.act_window">
        <field name="name">Physiotherapy Note Template</field>
        <field name="path">almightyhms-physiotherapy-note-template</field>
        <field name="res_model">acs.physiotherapy.note.template</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add new record.
            </p>
        </field>
    </record>

    <record id="acs_physiotherapy_selection_note_template_list" model="ir.ui.view">
        <field name="name">Physiotherapy Selection NoteTemplate List</field>
        <field name="model">acs.physiotherapy.selection.note.template</field>
        <field name="arch" type="xml">
            <list string="Physiotherapy Selection NoteTemplate">
                <field name="name"/>
                <field name="right_val"/>
                <field name="left_val"/>
                <field name="selnote_type" required="1"/>
            </list>
        </field>
    </record>

    <record id="acs_physiotherapy_selection_note_template_form" model="ir.ui.view">
        <field name="name">Physiotherapy Selection NoteTemplate Form</field>
        <field name="model">acs.physiotherapy.selection.note.template</field>
        <field name="arch" type="xml">
            <form string="Physiotherapy Selection Note Template">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="right_val"/>
                        <field name="left_val"/>
                        <field name="selnote_type" required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="acs_action_physiotherapy_selection_note_template" model="ir.actions.act_window">
        <field name="name">Physiotherapy SelectionNote Template</field>
        <field name="path">almightyhms-physiotherapy-selection-note-template</field>
        <field name="res_model">acs.physiotherapy.selection.note.template</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add new record.
            </p>
        </field>
    </record>

</odoo>