<?xml version="1.0"?>
<odoo>

    <!-- Radiology Test type -->
    <record id="hms_test_view" model="ir.ui.view">
        <field name="name">Radiology Test</field>
        <field name="model">acs.radiology.test</field>
        <field name="arch" type="xml">
            <form string="Radiology Tests">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="product_id" domain="[('type','=','service'), ('hospital_product_type', 'in', [ 'radiology'])]" context="{'default_type': 'service', 'default_hospital_product_type': 'radiology'}"/>
                            <field name="list_price"/>
                            <!-- <field name="taxes_ids" widget="many2many_tags"/> -->
                            <field name="total_amount"/>
                        </group>
                        <group>
                            <field name="code"/>
                            <field name="acs_tat"/>
                            <field name="instruction"/>
                            <field name="radiology_room_ids" widget="many2many_tags"/>
                        </group>
                    </group>

                    <notebook>
                        <page name="consumable_lines" string="Consumed Material">
                            <field name="consumable_line_ids" nolabel="1" colspan="2">
                                <list string="Line" editable="bottom">
                                    <field name="product_id" expand="1" required="1"/>
                                    <field name="product_uom_id" required="1" groups="uom.group_uom"/>
                                    <field name="qty" required="1"/>
                                    <field name="tracking" column_invisible="1"/>
                                    <field name="move_id" column_invisible="1"/>
                                    <field name="ignore_stock_move" optional="hide"/>
                                </list>
                            </field>
                        </page>
                        <page name="other_info" string="Other Information">
                            <group>
                                <group>
                                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                                    <!-- <field name="subsequent_test_ids" widget="many2many_tags"/> -->
                                </group>
                                <group>
                                    <field name="active" invisible="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                    <separator string="Diagnosis" name="diagnosis"/>
                    <field name="diagnosis" placeholder="Diagnosis Template: Templae to complete result diagnosis easily"/>
                    <separator string="Description" name="description"/>
                    <field name="description" placeholder="Description"/>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="hms_test_list" model="ir.ui.view">
        <field name="name">Radiology Tests</field>
        <field name="model">acs.radiology.test</field>
        <field name="arch" type="xml">
            <list string="Radiology Test">
                <field name="name"/>
                <field name="code"/>
                <field name="list_price"/>
                <!-- <field name="taxes_ids" widget="many2many_tags"/> -->
                <field name="total_amount"/>
                <field name="active" column_invisible="1"/>
            </list>
        </field>
    </record>

    <record id="action_radiology_test" model="ir.actions.act_window">
        <field name="name">Radiology Tests</field>
        <field name="path">almighty-radiology-test</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">acs.radiology.test</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add new Radiology Test.
            </p>
        </field>
    </record>

</odoo>