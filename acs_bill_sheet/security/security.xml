<odoo>
    <record model="ir.module.category" id="bill_sheet_category">
        <field name="name">Bill Sheet</field>
        <field name="description">Bill Sheet Management</field>
        <field name="sequence">66</field>
    </record>

    <record id="privilege_acs_bill_sheet" model="res.groups.privilege" >
        <field name="name">Bill Sheet</field>
        <field name="sequence">21</field>
        <field name="category_id" ref="acs_bill_sheet.bill_sheet_category"/>
    </record>

    <record id="group_acs_bill_sheet_user" model="res.groups">
        <field name="name">User</field>
        <field name="privilege_id" ref="acs_bill_sheet.privilege_acs_bill_sheet"/>
    </record>

    <record id="group_acs_bill_sheet_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="privilege_id" ref="acs_bill_sheet.privilege_acs_bill_sheet"/>
        <field name="implied_ids" eval="[Command.link(ref('acs_bill_sheet.group_acs_bill_sheet_user'))]"/>
        <field name="user_ids" eval="[Command.link(ref('base.user_root')), Command.link(ref('base.user_admin'))]"/>
    </record>

    <record id="acs_bill_sheet_user_rule" model="ir.rule">
        <field name="name">Bill Sheet: User Own Records</field>
        <field name="model_id" ref="acs_bill_sheet.model_acs_bill_sheet"/>
        <field name="groups" eval="[Command.link(ref('acs_bill_sheet.group_acs_bill_sheet_user'))]"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
    </record>

    <record id="acs_bill_sheet_manager_rule" model="ir.rule">
        <field name="name">Bill Sheet: Manager All Records</field>
        <field name="model_id" ref="acs_bill_sheet.model_acs_bill_sheet"/>
        <field name="groups" eval="[Command.link(ref('acs_bill_sheet.group_acs_bill_sheet_manager'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

</odoo>
