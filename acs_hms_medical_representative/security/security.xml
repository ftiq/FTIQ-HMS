<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="privilege_acs_hms_medical_representative" model="res.groups.privilege">
            <field name="name">Medical Representative</field>
            <field name="sequence">1</field>
            <field name="category_id" ref="acs_hms_base.module_category_hms_extra"/>
        </record>

        <record id="group_acs_hms_medical_representative" model="res.groups">
            <field name="name">Allow</field>
            <field name="privilege_id" ref="privilege_acs_hms_medical_representative"/>
            <field name="user_ids" eval="[Command.link(ref('base.user_root')), Command.link(ref('base.user_admin'))]"/>
        </record>

        <record id="acs_hms_mr_model_rule" model="ir.rule">
            <field name="name">Medical Representative: User</field>
            <field name="model_id" ref="model_medical_representative"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[Command.link(ref('acs_hms_medical_representative.group_acs_hms_medical_representative'))]"/>
        </record>
    </data>
</odoo>
