<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_acs_surgery_form_inherit" model="ir.ui.view">
        <field name="name">acs.surgery.form.inherit.consent</field>
        <field name="model">hms.surgery</field>
        <field name="inherit_id" ref="acs_hms_surgery.hms_surgery_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_open_consent_form" type="object" class="oe_stat_button" icon="fa-file-text" invisible="state not in ['confirm','done']">
                    <field name="consent_form_count" string="Consent Form" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>