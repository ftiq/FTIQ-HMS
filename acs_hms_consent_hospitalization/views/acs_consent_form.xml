<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_acs_consent_form_inherit" model="ir.ui.view">
        <field name="name">acs.consent.form.inherit</field>
        <field name="model">acs.consent.form</field>
        <field name="inherit_id" ref="acs_consent_form.view_acs_consent_form_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="hospitalization_id" invisible="not hospitalization_id"/>
                <field name="surgery_id" invisible="not surgery_id"/>
            </xpath>
        </field>
    </record>

    <record id="view_consent_form_template_form_inherit" model="ir.ui.view">
        <field name="name">acs.consent.form.template.form.inherit</field>
        <field name="model">acs.consent.form.template</field>
        <field name="inherit_id" ref="acs_consent_form.view_acs_consent_form_template_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="acs_is_hospitalization_template"/>
                <field name="acs_is_surgery_template"/>
            </xpath>
        </field>
    </record>
</odoo>