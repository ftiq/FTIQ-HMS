<?xml version="1.0"?>
<odoo>

    <!-- Patient -->
    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">patient.form</field>
        <field name="model">hms.patient</field>
        <field name="inherit_id" ref="acs_hms.view_patient_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='blood_group']" position="after">
                <field name="nephrology_care"/>
                <field name="debugging_treatment_start_date" invisible="not nephrology_care"/>
            </xpath>
        </field>
    </record>

    <record id="action_acs_hms_patient" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="res_model">hms.patient</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'default_nephrology_care': True}</field>
        <field name="domain">[('nephrology_care','=', True)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add a Patient.
            </p>
        </field>
    </record>

    <!-- Appointment View -->
    <record id="action_appointment" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="res_model">hms.appointment</field>
        <field name="view_mode">list,form,kanban,calendar,pivot</field>
        <field name="domain" eval="[('department_id.department_type','=','nephrology')]"/>
        <field name="context">{'search_default_today': 1,'search_default_done': 1,'acs_department_type': 'nephrology'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add an Nephrology Appointment.
            </p>
        </field>
    </record>

    <!-- Treatment -->
    <record id="action_acs_treatment" model="ir.actions.act_window">
        <field name="name">Treatment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hms.treatment</field>
        <field name="view_mode">list,form,calendar,pivot</field>
        <field name="domain" eval="[('department_id.department_type','=','nephrology')]"/>
        <field name="context">{'acs_department_type': 'nephrology'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add a Nephrology Treatment.
            </p>
        </field>
    </record>

    <record id="action_acs_nephrology_procedure" model="ir.actions.act_window">
        <field name="name">Patient Procedures</field>
        <field name="res_model">acs.patient.procedure</field>
        <field name="view_mode">list,form,calendar,pivot</field>
        <field name="context">{'acs_department_type': 'nephrology', 'search_default_not_done': 1}</field>
        <field name="domain" eval="[('department_id.department_type','=','nephrology')]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add a Patient Nephrology Procedure.
            </p>
        </field>
    </record>

    <!--Dental Procedures-->
    <record id="action_nephrology_procedure" model="ir.actions.act_window">
        <field name="name">Nephrology Procedure</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="view_id" ref="product.product_template_kanban_view"/>
        <field name="domain">[('hospital_product_type','=','nephrology_procedure')]</field>
        <field name="context">{'default_hospital_product_type': 'nephrology_procedure', 'default_detailed_type': 'service'}</field>
    </record>

</odoo>