<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="patient_information_template" inherit_id="acs_radiology.patient_information_template">
        <xpath expr="//tr[@name='radiology_test_date']" position="after">
            <tr name="radiology_hosp_pres" t-if="radiology_data and radiology_data.hospitalization_id">
                <td name="raiology_hosp">
                    <strong class="text-center ms-2">Hospitalization:</strong> <span t-field="radiology_data.hospitalization_id"/>
                </td>
                <td name="radiology__null"></td>
            </tr>
        </xpath>
    </template>

</odoo>