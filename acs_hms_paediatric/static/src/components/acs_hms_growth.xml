<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="acs_hms.AcsHmsPaediatricChart">
        <div class="acs_hms_graph_control">
            <div class="hms-graph-content">
                <div class="hms-graph-main-content">
                    <div class="hms-graph-section">
                        <div class="row">
                            <!-- Weight Chart -->
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="hms-graph-card">
                                    <div class="hms-graph-chart-header" t-att-style="'background-color: ' + state.paediatricChartColor + '; opacity: 0.9;'">
                                        <img t-att-src="'/acs_hms/static/src/img/evaluation_graph.gif'" class="hms-graph-widget"/>
                                        <span class="hms-chart-header-text">Weight Chart</span>
                                    </div>
                                    <div class="hms-graph-chart-body">
                                        <div t-ref="acsWeightChartContainer" id='acsWeightChartContainer' style="width: 100%; height: 300px;padding:10px"></div>
                                    </div>
                                </div>
                            </div>

                            <!-- Height Chart -->
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="hms-graph-card">
                                    <div class="hms-graph-chart-header" t-att-style="'background-color: ' + state.paediatricChartColor + '; opacity: 0.9;'">
                                        <img t-att-src="'/acs_hms/static/src/img/evaluation_graph.gif'" class="hms-graph-widget"/>
                                        <span class="hms-chart-header-text">Height Chart</span>
                                    </div>
                                    <div class="hms-graph-chart-body">
                                        <div t-ref="acsHeightChartContainer" id='acsHeightChartContainer' style="width: 100%; height: 300px;padding:10px"></div>
                                    </div>
                                </div>
                            </div>

                            <!-- Head Circumference Chart -->
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="hms-graph-card">
                                    <div class="hms-graph-chart-header" t-att-style="'background-color: ' + state.paediatricChartColor + '; opacity: 0.9;'">
                                        <img t-att-src="'/acs_hms/static/src/img/evaluation_graph.gif'" class="hms-graph-widget"/>
                                        <span class="hms-chart-header-text">Head Circumference Chart</span>
                                    </div>
                                    <div class="hms-graph-chart-body">
                                        <div t-ref="acsHeadChartContainer" id='acsHeadChartContainer' style="width: 100%; height: 300px;padding:10px"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
