<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="module_category_facility" model="ir.module.category">
        <field name="name">Facility Management</field>
        <field name="description">Facility Management</field>
        <field name="sequence">66</field>
    </record>

    <record id="acs_privilege_acs_facility_management" model="res.groups.privilege">
        <field name="name">Facility</field>
        <field name="sequence">1</field>
        <field name="category_id" ref="module_category_facility"/>
    </record>

    <record id="group_facility_user" model="res.groups">
        <field name="name">User</field>
        <field name="privilege_id" ref="acs_privilege_acs_facility_management"/>
    </record>

    <record id="group_facility_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="privilege_id" ref="acs_privilege_acs_facility_management"/>
        <field name="implied_ids" eval="[Command.link(ref('facility_management.group_facility_user'))]"/>
        <field name="user_ids" eval="[Command.link(ref('base.user_root')), Command.link(ref('base.user_admin'))]"/>
    </record>

</odoo>